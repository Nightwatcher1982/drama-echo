/* 搜索区域 */
.search-section {
  margin-bottom: 24rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2px solid rgba(255, 215, 0, 0.3);
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #5D4E75;
}

.search-icon {
  margin-left: 16rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FF9A8B, #FFD700);
  border-radius: 50%;
  font-size: 32rpx;
  color: white;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
}

.filter-tab {
  flex: 1;
  padding: 16rpx 24rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.6);
  border: 1px solid rgba(255, 215, 0, 0.3);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #5D4E75;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: linear-gradient(135deg, #FF9A8B, #FFD700);
  color: white;
  font-weight: 600;
}

/* 快速添加 */
.quick-add {
  margin-bottom: 32rpx;
}

.add-note-btn {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.1), rgba(255, 154, 139, 0.1));
  border: 2px dashed rgba(255, 215, 0, 0.5);
  border-radius: 24rpx;
  color: #5D4E75;
  font-size: 28rpx;
}

.add-note-btn::after {
  border: none;
}

.add-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.add-text {
  flex: 1;
  text-align: left;
}

.add-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #5D4E75;
}

.add-desc {
  font-size: 24rpx;
  color: #5D4E75;
  opacity: 0.8;
}

/* 笔记列表 */
.notes-list {
  margin-bottom: 32rpx;
}

.note-item {
  margin-bottom: 24rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.note-item:active {
  transform: scale(0.98);
}

.note-header {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.note-cover {
  width: 160rpx;
  height: 120rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #FF9A8B, #A8E6CF);
  display: flex;
  align-items: center;
  justify-content: center;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.image-placeholder {
  font-size: 48rpx;
  color: white;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
  z-index: 1;
}

.note-rating {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 8rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 12rpx;
}

.rating-stars {
  font-size: 20rpx;
  color: #FFD700;
}

.note-info {
  flex: 1;
}

.note-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #5D4E75;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.note-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.note-theater,
.note-date {
  font-size: 24rpx;
  color: #5D4E75;
  opacity: 0.8;
}

.note-preview {
  font-size: 26rpx;
  color: #5D4E75;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.note-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 12rpx;
  background: rgba(255, 215, 0, 0.2);
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #5D4E75;
}

.note-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid rgba(255, 215, 0, 0.2);
  padding-top: 20rpx;
}

.note-stats {
  display: flex;
  gap: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 24rpx;
}

.stat-count {
  font-size: 22rpx;
  color: #5D4E75;
  opacity: 0.8;
}

.note-actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.share-btn {
  background: linear-gradient(135deg, #98D8C8, #FF9A8B);
  color: white;
}

.edit-btn {
  background: rgba(255, 215, 0, 0.2);
  color: #5D4E75;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #5D4E75;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #5D4E75;
  opacity: 0.8;
  margin-bottom: 48rpx;
}

.empty-btn {
  width: 300rpx;
  margin: 0 auto;
}

/* 统计信息 */
.stats-summary {
  margin-top: 32rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #5D4E75;
  margin-bottom: 24rpx;
  text-align: center;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stats-grid .stat-item {
  text-align: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  border: 1px solid rgba(255, 215, 0, 0.3);
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #FF9A8B;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #5D4E75;
  opacity: 0.8;
}

/* 动画效果 */
@keyframes noteSlideIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.note-item {
  animation: noteSlideIn 0.6s ease-out;
}

.note-item:nth-child(odd) {
  animation-delay: 0.1s;
}

.note-item:nth-child(even) {
  animation-delay: 0.2s;
} 