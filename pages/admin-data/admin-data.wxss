/* 管理后台数据页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 认证区域 */
.auth-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 40rpx 0;
  text-align: center;
}

.auth-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.auth-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  background: white;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 统计概览 */
.stats-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  color: white;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 标签页 */
.tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.tab {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #666;
  background: transparent;
  transition: all 0.3s ease;
}

.tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

/* 内容区域 */
.content-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.actor-picker {
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.btn-refresh {
  background: #4CAF50;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
}

/* 购买记录 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #667eea;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.user-id {
  font-size: 22rpx;
  color: #666;
}

.record-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #f5576c;
}

.record-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.pack-info {
  flex: 1;
}

.pack-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 4rpx;
}

.actor-name {
  font-size: 22rpx;
  color: #666;
}

.record-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-completed {
  background: #d4edda;
  color: #155724;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-refunded {
  background: #f8d7da;
  color: #721c24;
}

.record-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #666;
}

.purchase-details {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4rpx;
}

.purchase-type {
  background: #e9ecef;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.purchase-count {
  background: #fff3cd;
  color: #856404;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

/* 语音包销售明细 */
.sales-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.sales-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #28a745;
}

.sales-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.pack-info {
  flex: 1;
}

.pack-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.actor-name {
  font-size: 24rpx;
  color: #666;
}

.sales-rank {
  text-align: center;
}

.rank-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #28a745;
  background: rgba(40, 167, 69, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.sales-stats {
  margin-bottom: 20rpx;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 8rpx;
  background: white;
  border-radius: 8rpx;
  margin: 0 4rpx;
}

.stat-label {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

.status-active {
  color: #28a745;
  background: rgba(40, 167, 69, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.status-inactive {
  color: #dc3545;
  background: rgba(220, 53, 69, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.sales-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #666;
  padding-top: 16rpx;
  border-top: 1rpx solid #e9ecef;
}

.create-time {
  flex: 1;
}

.conversion-rate {
  background: #fff3cd;
  color: #856404;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

/* 粉丝排行榜 */
.rankings-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #ffc107;
}

.rank-number {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 24rpx;
}

.rank-1 {
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  color: #333;
}

.rank-2 {
  background: linear-gradient(135deg, #c0c0c0 0%, #e8e8e8 100%);
  color: #333;
}

.rank-3 {
  background: linear-gradient(135deg, #cd7f32 0%, #daa520 100%);
  color: white;
}

.fan-info {
  flex: 1;
  margin-right: 20rpx;
}

.fan-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.fan-stats {
  display: flex;
  gap: 20rpx;
}

.purchase-count, .total-spent {
  font-size: 22rpx;
  color: #666;
  background: #e9ecef;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.fan-level {
  text-align: center;
}

.level-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.star-level {
  font-size: 20rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 20rpx;
  color: #666;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx;
  color: #667eea;
  font-size: 28rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

/* 退出登录 */
.logout-section {
  text-align: center;
  margin-top: 40rpx;
}

.btn-logout {
  background: #dc3545;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
}
