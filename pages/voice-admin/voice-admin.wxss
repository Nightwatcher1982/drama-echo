/* 语音包管理后台样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  color: white;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 玻璃态卡片 */
.glass-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 32rpx;
}

/* 身份验证 */
.auth-section {
  padding: 60rpx 40rpx;
  text-align: center;
}

.auth-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 40rpx;
}

.auth-input {
  width: 100%;
  padding: 24rpx 32rpx;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  text-align: center;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.btn-outline {
  background: transparent;
  color: #4facfe;
  border: 2rpx solid #4facfe;
  border-radius: 16rpx;
  padding: 20rpx 28rpx;
  font-size: 26rpx;
}

.btn-secondary {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 28rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.btn-danger {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 20rpx 28rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.btn-small {
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  border-radius: 12rpx;
}

/* 通用节样式 */
.section {
  padding: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

/* 演员选择器 */
.actors-selector {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.actor-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.actor-item.selected {
  background: rgba(255, 255, 255, 0.2);
  border-color: rgba(255, 255, 255, 0.5);
  transform: scale(1.02);
}

.actor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-right: 24rpx;
}

.actor-info {
  flex: 1;
}

.actor-name {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.actor-title {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 4rpx;
}

.pack-count {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-left: 16rpx;
}

.status-indicator.online {
  background: #22c55e;
  box-shadow: 0 0 0 4rpx rgba(34, 197, 94, 0.3);
}

.status-indicator.offline {
  background: #6b7280;
}

/* 语音包列表 */
.voice-packs-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.pack-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
}

.pack-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.pack-basic-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.pack-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.pack-details {
  flex: 1;
}

.pack-name {
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.pack-price {
  font-size: 24rpx;
  color: #fbbf24;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.pack-meta {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

.hot-tag {
  background: #ef4444;
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  margin-left: 12rpx;
}

.pack-actions {
  display: flex;
  gap: 12rpx;
}

/* 语音文件管理 */
.voice-files-section {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.files-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.files-title {
  font-size: 26rpx;
  color: white;
  font-weight: bold;
}

.voice-files-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.voice-file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 12rpx;
}

.file-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.file-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  margin-right: 16rpx;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 24rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.file-meta {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 4rpx;
}

.file-path {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.4);
  word-break: break-all;
}

.file-actions {
  display: flex;
  gap: 8rpx;
}

.empty-files {
  text-align: center;
  padding: 40rpx;
}

.empty-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

/* 统计信息 */
.stats-section {
  padding: 40rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #fbbf24;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 空状态 */
.empty-packs {
  text-align: center;
  padding: 80rpx 40rpx;
  color: rgba(255, 255, 255, 0.6);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal {
  width: 90%;
  max-width: 800rpx;
  max-height: 80vh;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 0.9));
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f3f4f6;
  border-radius: 50%;
  color: #666;
  font-size: 24rpx;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  max-height: 60vh;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.modal-footer .btn-outline,
.modal-footer .btn-primary {
  flex: 1;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.form-input,
.form-textarea {
  width: 100%;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #374151;
  background: white;
}

.form-input:focus,
.form-textarea:focus {
  border-color: #4facfe;
  outline: none;
}

.form-textarea {
  min-height: 120rpx;
  resize: vertical;
}

.emoji-input {
  text-align: center;
  font-size: 48rpx;
}

.checkbox-group {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.checkbox-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #374151;
}

/* 文件上传 */
.file-upload-area {
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  padding: 40rpx;
  text-align: center;
  background: #f9fafb;
  transition: all 0.3s ease;
}

.file-upload-area:active {
  background: #f3f4f6;
  border-color: #9ca3af;
}

.upload-placeholder {
  color: #6b7280;
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.upload-text {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.upload-hint {
  font-size: 22rpx;
  opacity: 0.8;
}

.uploaded-file {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.file-icon {
  font-size: 32rpx;
}

.file-name {
  font-size: 24rpx;
  color: #374151;
  flex: 1;
  min-width: 200rpx;
}

.audio-preview {
  text-align: center;
  padding: 20rpx;
  background: #f3f4f6;
  border-radius: 12rpx;
}

/* 图片上传样式 */
.images-upload-section {
  margin-top: 16rpx;
}

.images-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.image-item {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.remove-image {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: #ff4757;
  color: white;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.add-image-btn {
  width: 120rpx;
  height: 120rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.add-image-btn:active {
  background: #e9ecef;
  border-color: #4facfe;
}

.add-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 20rpx;
  color: #666;
}

/* 视频上传样式 */
.video-upload-section {
  margin-top: 16rpx;
}

.video-upload-area {
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.video-upload-area:active {
  background: #e9ecef;
  border-color: #4facfe;
}

.video-preview {
  border-radius: 12rpx;
  overflow: hidden;
  background: #000;
}

.preview-video {
  width: 100%;
  height: 300rpx;
  background: #000;
}

.video-info {
  padding: 16rpx;
  background: rgba(0, 0, 0, 0.8);
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.video-title {
  font-size: 24rpx;
  font-weight: 500;
}

.video-duration {
  font-size: 20rpx;
  color: #ccc;
}