/* 已购买语音包列表页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #FFF9F0 0%, #FFE4E1 100%);
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #FF9A8B;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.empty-btn {
  background: linear-gradient(135deg, #FF9A8B 0%, #FF6B6B 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 139, 0.3);
  transition: all 0.3s ease;
}

.empty-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 139, 0.3);
}

/* 语音包列表 */
.packs-container {
  padding: 20rpx 0;
}

.packs-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.packs-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.packs-count {
  font-size: 24rpx;
  color: #666;
  background: rgba(255, 154, 139, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.packs-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pack-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.pack-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.pack-cover {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #FF9A8B 0%, #FF6B6B 100%);
}

.pack-image {
  width: 100%;
  height: 100%;
}

.pack-play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
}

.play-icon {
  font-size: 20rpx;
  color: white;
  margin-left: 2rpx;
}

.pack-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.pack-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.2;
}

.pack-actor {
  font-size: 24rpx;
  color: #FF9A8B;
  font-weight: 500;
}

.pack-desc {
  font-size: 22rpx;
  color: #666;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.pack-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.pack-count {
  display: flex;
  align-items: center;
  background: rgba(255, 154, 139, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-bottom: 8rpx;
}

.count-label {
  font-size: 20rpx;
  color: #FF9A8B;
  margin-right: 4rpx;
}

.count-number {
  font-size: 20rpx;
  color: #FF6B6B;
  font-weight: 600;
  background: rgba(255, 107, 107, 0.1);
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
}

.pack-price {
  font-size: 24rpx;
  color: #FF6B6B;
  font-weight: 600;
}

.pack-date {
  font-size: 20rpx;
  color: #999;
}

.pack-arrow {
  font-size: 32rpx;
  color: #FF9A8B;
  font-weight: bold;
  margin-left: 16rpx;
}
