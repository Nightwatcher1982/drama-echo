<view class="container">
  <view class="header">
    <text class="title">登录测试页面</text>
  </view>

  <view class="status-section">
    <view class="status-item">
      <text class="label">登录状态：</text>
      <text class="value {{loginStatus.includes('已登录') ? 'success' : 'error'}}">{{loginStatus}}</text>
    </view>
    
    <view class="status-item" wx:if="{{userInfo}}">
      <text class="label">OpenID：</text>
      <text class="value">{{userInfo.openid}}</text>
    </view>
    
    <view class="status-item" wx:if="{{userInfo}}">
      <text class="label">AppID：</text>
      <text class="value">{{userInfo.appid}}</text>
    </view>
  </view>

  <view class="button-section">
    <button class="btn primary" bindtap="manualLogin">手动登录</button>
    <button class="btn secondary" bindtap="clearCache">清除缓存</button>
    <button class="btn success" bindtap="testPayment">测试支付</button>
  </view>

  <view class="logs-section">
    <view class="logs-header">
      <text class="logs-title">调试日志</text>
    </view>
    <scroll-view class="logs-content" scroll-y="true">
      <view wx:for="{{logs}}" wx:key="index" class="log-item">
        {{item}}
      </view>
    </scroll-view>
  </view>
</view>
