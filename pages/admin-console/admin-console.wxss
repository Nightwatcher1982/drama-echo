/* 主容器 */
.container { 
  padding: 20rpx; 
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
  min-height: 100vh; 
}

/* 头部 */
.header { 
  text-align: center; 
  margin: 20rpx 0 30rpx; 
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.title { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #fff; 
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.subtitle { 
  font-size: 24rpx; 
  color: rgba(255, 255, 255, 0.8); 
  margin-top: 8rpx; 
}

/* 卡片 */
.card { 
  background: rgba(255, 255, 255, 0.95); 
  border-radius: 20rpx; 
  padding: 24rpx; 
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1); 
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.card.small { 
  padding: 16rpx; 
}

/* 模块导航 */
.module-nav {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.nav-item.active {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-2rpx);
}

.nav-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.nav-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.nav-item.active .nav-label {
  color: #fff;
  font-weight: 600;
}

/* 模块内容 */
.module-content {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 内容管理区域样式 */
.content-section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-bottom: 1rpx solid #e9ecef;
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.title-icon {
  font-size: 32rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.title-badge {
  background: #667eea;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.section-actions {
  display: flex;
  gap: 12rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.btn-sm {
  padding: 12rpx 20rpx;
