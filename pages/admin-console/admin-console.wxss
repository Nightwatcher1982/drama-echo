.container { padding: 24rpx; background: #f5f7fb; min-height: 100vh; }
.header { text-align: center; margin: 24rpx 0 32rpx; }
.title { font-size: 40rpx; font-weight: 700; color: #1f2937; }
.subtitle { font-size: 26rpx; color: #6b7280; margin-top: 8rpx; }
.card { background: #fff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 6rpx 20rpx rgba(0,0,0,.06); margin-bottom: 20rpx; }
.card.small { padding: 16rpx; }
.section-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 16rpx; }
.section-title { font-size: 30rpx; font-weight: 600; color: #111827; }
.picker { padding: 22rpx; background: #f9fafb; border: 2rpx solid #e5e7eb; border-radius: 12rpx; color: #374151; }
.btn-primary { background: #2563eb; color: #fff; border: 0; border-radius: 12rpx; padding: 20rpx; font-size: 28rpx; }
.btn-outline { background: #fff; color: #2563eb; border: 2rpx solid #2563eb; border-radius: 12rpx; padding: 18rpx 20rpx; font-size: 26rpx; }
.btn-s { padding: 12rpx 16rpx; font-size: 24rpx; border-radius: 10rpx; }
.pack-item { display: flex; align-items: center; justify-content: space-between; padding: 18rpx; border: 2rpx solid #f3f4f6; border-radius: 12rpx; margin-bottom: 12rpx; background: #fff; }
.pack-main { display: flex; align-items: center; gap: 16rpx; }
.pack-icon { width: 56rpx; height: 56rpx; border-radius: 50%; background: #eef2ff; display:flex; align-items: center; justify-content:center; }
.pack-info { display: flex; flex-direction: column; }
.pack-name { font-size: 28rpx; font-weight: 600; color: #111827; }
.pack-meta { font-size: 22rpx; color: #6b7280; margin-top: 4rpx; }
.empty { text-align:center; color:#9ca3af; padding: 24rpx; }
.modal { position: fixed; left:0; right:0; top:0; bottom:0; background: rgba(0,0,0,.45); display:flex; align-items:center; justify-content:center; z-index: 1000; }
.modal-body { width: 90%; max-width: 700rpx; background:#fff; border-radius:16rpx; padding: 24rpx; }
.modal-title { font-size: 32rpx; font-weight: 700; color:#111827; margin-bottom: 16rpx; }
.input { width: 100%; padding: 20rpx; border: 2rpx solid #e5e7eb; border-radius: 12rpx; font-size: 28rpx; color:#111827; background:#fff; margin-bottom: 16rpx; }
.textarea { width: 100%; min-height: 140rpx; padding: 16rpx; border: 2rpx solid #e5e7eb; border-radius: 12rpx; font-size: 26rpx; background:#fff; color:#111827; }
.modal-actions { display:flex; gap: 16rpx; margin-top: 16rpx; }
.uploader { margin-top: 12rpx; height: 240rpx; background:#f9fafb; border: 2rpx dashed #e5e7eb; border-radius: 12rpx; display:flex; align-items:center; justify-content:center; }
.uploader-hint { color:#9ca3af; }
.img { width: 100%; height: 100%; border-radius: 12rpx; }
.file-chip { background:#eef2ff; color:#1f2937; padding: 16rpx 20rpx; border-radius: 10rpx; }
.img-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 12rpx; }
.img-cell { position: relative; height: 180rpx; background:#f9fafb; border: 2rpx solid #e5e7eb; border-radius: 12rpx; overflow: hidden; display:flex; align-items:center; justify-content:center; }
.img-cell.add { color:#2563eb; font-size: 28rpx; }
.img-cell .btn-s { position: absolute; right: 8rpx; bottom: 8rpx; }
.file-row { display:flex; align-items:center; justify-content:space-between; padding: 12rpx 8rpx; border-bottom: 2rpx solid #f3f4f6; }
.file-row:last-child { border-bottom: 0; }
.file-name { font-size: 26rpx; color:#111827; }
.file-actions { display:flex; gap: 12rpx; }

/* 图片上传样式 */
.form-group { margin-bottom: 24rpx; }
.form-label { display: block; font-size: 28rpx; font-weight: 600; color: #111827; margin-bottom: 12rpx; }
.images-upload-section { margin-top: 12rpx; }
.images-list { display: flex; flex-wrap: wrap; gap: 12rpx; margin-bottom: 12rpx; }
.image-item { position: relative; width: 120rpx; height: 120rpx; border-radius: 12rpx; overflow: hidden; }
.uploaded-image { width: 100%; height: 100%; border-radius: 12rpx; }
.remove-image { position: absolute; top: -8rpx; right: -8rpx; width: 32rpx; height: 32rpx; border-radius: 50%; background: #ef4444; color: white; font-size: 20rpx; display: flex; align-items: center; justify-content: center; border: 2rpx solid white; }
.add-image-btn { width: 120rpx; height: 120rpx; border: 2rpx dashed #d1d5db; border-radius: 12rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; background: #f9fafb; color: #6b7280; }
.add-icon { font-size: 32rpx; margin-bottom: 8rpx; }
.add-text { font-size: 20rpx; }
.upload-hint { font-size: 22rpx; color: #9ca3af; margin-top: 8rpx; }

/* 视频上传样式 */
.video-upload-section { margin-top: 12rpx; }
.video-upload-area { height: 200rpx; border: 2rpx dashed #d1d5db; border-radius: 12rpx; display: flex; align-items: center; justify-content: center; background: #f9fafb; }
.upload-placeholder { text-align: center; color: #6b7280; }
.upload-icon { font-size: 48rpx; margin-bottom: 12rpx; }
.upload-text { font-size: 28rpx; font-weight: 500; margin-bottom: 8rpx; }
.video-preview { margin-top: 12rpx; }
.preview-video { width: 100%; height: 200rpx; border-radius: 12rpx; background: #000; }
.video-info { margin-top: 12rpx; }
.video-title { font-size: 26rpx; font-weight: 600; color: #111827; margin-bottom: 4rpx; }
.video-duration { font-size: 22rpx; color: #6b7280; }
.btn-small { padding: 8rpx 16rpx; font-size: 22rpx; border-radius: 8rpx; margin-top: 8rpx; margin-right: 8rpx; }
.btn-danger { background: #ef4444; color: white; border: none; }

