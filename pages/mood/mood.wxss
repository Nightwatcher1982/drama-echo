/* 每日限制卡片 */
.daily-limit-card {
  margin-bottom: 32rpx;
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.1), rgba(6, 182, 212, 0.1));
  border: 1px solid rgba(139, 92, 246, 0.3);
}

.limit-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.limit-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.limit-info {
  flex: 1;
}

.limit-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #8B5CF6;
  margin-bottom: 4rpx;
}

.limit-desc {
  font-size: 24rpx;
  color: #5D4E75;
}

.limit-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-weight: bold;
}

.limit-status.available {
  background: rgba(34, 197, 94, 0.2);
  color: #22C55E;
  border: 1px solid rgba(34, 197, 94, 0.3);
}

.limit-status.used {
  background: rgba(156, 163, 175, 0.2);
  color: #9CA3AF;
  border: 1px solid rgba(156, 163, 175, 0.3);
}

.limit-progress {
  margin-top: 16rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #5D4E75;
  margin-bottom: 8rpx;
}

.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #8B5CF6, #06B6D4);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 心情分类 */
.mood-categories {
  display: flex;
  justify-content: space-around;
  margin-bottom: 32rpx;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.05);
}

.category-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-tab.active {
  background: linear-gradient(135deg, rgba(139, 92, 246, 0.3), rgba(59, 130, 246, 0.2));
  border: 1px solid rgba(139, 92, 246, 0.5);
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #5D4E75;
  font-weight: bold;
}

/* 心情网格 */
.mood-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.mood-item {
  text-align: center;
  color: #5D4E75;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  padding: 32rpx 20rpx;
}

.mood-item:active {
  transform: scale(0.95);
  background: rgba(139, 92, 246, 0.25);
}

.mood-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(139, 92, 246, 0.2), transparent);
  transition: left 0.5s;
}

.mood-item:active::before {
  left: 100%;
}

.mood-emoji {
  font-size: 64rpx;
  margin-bottom: 16rpx;
  animation: pulse 2s infinite;
}

.mood-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #8B5CF6;
}

.mood-description {
  font-size: 22rpx;
  color: #5D4E75;
  line-height: 1.4;
}

/* 心情历史 */
.mood-history {
  margin-bottom: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #5D4E75;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  border: 1px solid rgba(139, 92, 246, 0.2);
}

.history-emoji {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.history-content {
  flex: 1;
}

.history-mood {
  font-size: 28rpx;
  font-weight: bold;
  color: #5D4E75;
  margin-bottom: 4rpx;
}

.history-date {
  font-size: 22rpx;
  color: #5D4E75;
}

.history-category {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  background: rgba(139, 92, 246, 0.2);
  color: #5D4E75;
  border-radius: 12rpx;
}

/* 底部提示 */
.bottom-tip {
  text-align: center;
  padding: 32rpx;
  margin-top: 40rpx;
}

.bottom-tip .tip-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.bottom-tip .tip-text {
  color: #5D4E75;
  font-size: 28rpx;
  line-height: 1.5;
} 