<view class="container fade-in">
  <view class="header">
    <image class="logo" src="/images/modu.png" mode="aspectFit"></image>
    <view class="page-title">戏剧回响</view>
    <view class="page-subtitle">Drama Echo</view>
    <view class="description">聆听内心的戏剧回响，感受生活的每一个音符</view>
    
    <!-- 用户登录状态 -->
    <view class="user-status">
      <view wx:if="{{userLoggedIn}}" class="user-info" bindtap="goToProfile">
        <image src="{{userProfile.avatarUrl}}" class="user-avatar" mode="aspectFill" wx:if="{{userProfile.avatarUrl}}"></image>
        <view class="avatar-placeholder" wx:else>🎭</view>
        <view class="user-details">
          <text class="user-name">{{displayName}}</text>
          <text class="user-tip" wx:if="{{!showCustomizeHint}}">点击查看个人中心</text>
          <text class="user-tip customize-hint" wx:else>点击设置个性化昵称</text>
        </view>
        <view class="arrow-icon">〉</view>
        <!-- nightwatcher管理员快速入口 -->
        <view wx:if="{{isNightWatcher}}" class="admin-quick-access" catchtap="goToAdminHelper">
          <text class="admin-badge">🎭 管理员</text>
        </view>
      </view>
      <button wx:else class="login-btn" bindtap="handleLogin">
        <text class="login-text">🎭 微信登录</text>
      </button>
    </view>
  </view>


  <!-- 主要功能入口 -->
  <view class="main-features">
    <view class="feature-row">
      <button class="btn-primary feature-btn-half" bindtap="goToMagicBook">
        <view class="btn-content">
          <view class="btn-icon">📖</view>
          <view class="btn-text">
            <view class="btn-title">魔法之书</view>
            <view class="btn-subtitle">星座运势·记录心情</view>
          </view>
        </view>
      </button>

      <button class="btn-secondary feature-btn-half" bindtap="goToEcho">
        <view class="btn-content">
          <view class="btn-icon">🎭</view>
          <view class="btn-text">
            <view class="btn-title">戏剧回响</view>
            <view class="btn-subtitle">演员语音·专属收藏</view>
          </view>
        </view>
      </button>
    </view>
  </view>

  <view class="footer">
    <view class="sparkle">✨ 让戏剧的回响在心中永存 ✨</view>
  </view>
</view> 