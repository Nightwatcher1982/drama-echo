page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 40rpx;
}

/* 页面头部 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-style: italic;
}

/* 卡片样式 */
.status-card, .actions-card, .results-card, .help-card, .nav-card, .error-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 错误卡片 */
.error-card {
  text-align: center;
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(220, 38, 38, 0.1));
  border: 2rpx solid rgba(239, 68, 68, 0.3);
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #EF4444;
  margin-bottom: 16rpx;
}

.error-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 刷新按钮 */
.refresh-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 22rpx;
  transition: all 0.3s ease;
}

.refresh-btn::after {
  border: none;
}

.refresh-btn.loading {
  opacity: 0.7;
}

.refresh-btn:active {
  transform: scale(0.95);
}

/* 状态列表 */
.status-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid;
}

.status-item.exists {
  background: rgba(34, 197, 94, 0.1);
  border-color: rgba(34, 197, 94, 0.3);
}

.status-item.missing {
  background: rgba(239, 68, 68, 0.1);
  border-color: rgba(239, 68, 68, 0.3);
}

.status-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.status-success {
  font-size: 22rpx;
  color: #22C55E;
}

.status-error {
  font-size: 22rpx;
  color: #EF4444;
}

/* 加载状态 */
.loading-status {
  text-align: center;
  padding: 40rpx;
  color: #666;
}

.loading-text {
  font-size: 24rpx;
}

/* 操作按钮网格 */
.actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  border: none;
  border-radius: 16rpx;
  position: relative;
  transition: all 0.3s ease;
  text-align: center;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.98);
}

.create-btn {
  background: linear-gradient(135deg, #10B981, #059669);
  color: white;
}

.init-btn {
  background: linear-gradient(135deg, #3B82F6, #1D4ED8);
  color: white;
}

.full-btn {
  background: linear-gradient(135deg, #8B5CF6, #7C3AED);
  color: white;
}

.test-btn {
  background: linear-gradient(135deg, #F59E0B, #D97706);
  color: white;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.btn-title {
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.btn-desc {
  font-size: 20rpx;
  opacity: 0.8;
  line-height: 1.3;
}

.btn-loading {
  position: absolute;
  bottom: 16rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 结果显示 */
.results-content {
  max-height: 600rpx;
  overflow-y: auto;
}

.result-section {
  margin-bottom: 32rpx;
}

.result-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  padding-bottom: 8rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.result-items {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.result-item {
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-family: monospace;
}

.result-item.created {
  background: rgba(34, 197, 94, 0.1);
  color: #059669;
  border: 1rpx solid rgba(34, 197, 94, 0.2);
}

.result-item.exists {
  background: rgba(156, 163, 175, 0.1);
  color: #6B7280;
  border: 1rpx solid rgba(156, 163, 175, 0.2);
}

.result-item.error {
  background: rgba(239, 68, 68, 0.1);
  color: #DC2626;
  border: 1rpx solid rgba(239, 68, 68, 0.2);
}

/* 帮助说明 */
.help-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.help-step {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.step-text {
  font-size: 24rpx;
  color: #555;
  line-height: 1.5;
  padding-top: 8rpx;
}

/* 导航按钮 */
.nav-buttons {
  display: flex;
  gap: 16rpx;
}

.nav-btn {
  flex: 1;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.nav-btn::after {
  border: none;
}

.nav-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .nav-buttons {
    flex-direction: column;
  }
}