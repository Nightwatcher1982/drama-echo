page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 40rpx;
}

/* 信息卡片 */
.info-card, .admin-section, .normal-user-section, .quick-actions, .debug-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 用户信息 */
.user-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar-section {
  margin-right: 24rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #667eea;
}

.default-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
}

.user-status.admin {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: white;
}

.user-status.normal {
  background: linear-gradient(135deg, #74b9ff, #0984e3);
  color: white;
}

/* OpenID 信息 */
.openid-section {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
}

.openid-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.openid-value {
  font-size: 22rpx;
  color: #333;
  word-break: break-all;
  line-height: 1.4;
  padding: 12rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx dashed #ddd;
}

.copy-hint {
  color: #667eea;
  font-size: 20rpx;
  margin-left: 8rpx;
}

/* 管理员功能 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 16rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
  border-radius: 16rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.action-text {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* 普通用户提示 */
.notice-content {
  color: #666;
}

.notice-text {
  font-size: 28rpx;
  line-height: 1.5;
  display: block;
  margin-bottom: 20rpx;
}

.notice-steps {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.step {
  display: block;
  font-size: 24rpx;
  color: #555;
  margin-bottom: 12rpx;
  padding-left: 16rpx;
  position: relative;
}

.step:before {
  content: "•";
  color: #667eea;
  position: absolute;
  left: 0;
  font-weight: bold;
}

/* 按钮组 */
.button-group {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.secondary {
  background: linear-gradient(135deg, #74b9ff, #0984e3);
}

.action-btn:active {
  transform: scale(0.98);
}

/* 调试信息 */
.debug-info {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  font-family: monospace;
}

.debug-item {
  display: block;
  font-size: 22rpx;
  color: #555;
  margin-bottom: 8rpx;
  padding: 8rpx 0;
  border-bottom: 1rpx solid #eee;
}

.debug-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}