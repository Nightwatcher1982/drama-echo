.container {
  padding: 20px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  color: white;
}

.header {
  text-align: center;
  margin-bottom: 40px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}

.subtitle {
  font-size: 14px;
  opacity: 0.8;
}

.button-section {
  margin-bottom: 30px;
}

.check-btn, .test-btn {
  width: 100%;
  margin-bottom: 15px;
  padding: 15px;
  border-radius: 10px;
  font-size: 16px;
  border: none;
  background: rgba(255, 255, 255, 0.1);
  color: white;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.check-btn:hover, .test-btn:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: translateY(-2px);
}

.check-btn.primary {
  background: rgba(255, 255, 255, 0.2);
  font-weight: bold;
}

.check-btn[disabled], .test-btn[disabled] {
  opacity: 0.5;
  transform: none;
}

.divider {
  height: 1px;
  background: rgba(255, 255, 255, 0.3);
  margin: 20px 0;
}

.result-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15px;
  padding: 20px;
  margin-bottom: 20px;
  backdrop-filter: blur(10px);
}

.result-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 15px;
  text-align: center;
}

.result-item {
  margin-bottom: 20px;
}

.result-header {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #FFD700;
}

.result-content {
  background: rgba(0, 0, 0, 0.2);
  border-radius: 8px;
  padding: 15px;
}

.result-content text {
  display: block;
  margin-bottom: 5px;
  font-size: 14px;
}

.tips {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15px;
  padding: 20px;
  backdrop-filter: blur(10px);
}

.tips-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  color: #FFD700;
}

.tips-content text {
  display: block;
  margin-bottom: 8px;
  font-size: 13px;
  opacity: 0.9;
}