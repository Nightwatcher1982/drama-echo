.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.refresh-time {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn-primary, .btn-warning, .btn-success, .btn-secondary, .btn-danger {
  flex: 1;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: white;
  border: none;
}

.btn-primary {
  background: #007aff;
}

.btn-warning {
  background: #ff9500;
}

.btn-success {
  background: #34c759;
}

.btn-secondary {
  background: #8e8e93;
}

.btn-danger {
  background: #ff3b30;
}

.btn-info {
  background: #5ac8fa;
}

.emergency-actions {
  margin-bottom: 30rpx;
}

.emergency-actions .btn-danger {
  width: 100%;
}

.section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.copy-btn {
  background: #007aff;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  border: none;
}

.info-item {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.value {
  font-size: 30rpx;
  color: #333;
  word-break: break-all;
}

.avatar-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid #e0e0e0;
}

.avatar-url {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.no-data {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

.data-preview {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f1f1f1;
  border-radius: 10rpx;
}

.json-data {
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
  font-family: monospace;
}
