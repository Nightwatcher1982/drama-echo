/* 索引优化页面样式 */
.container {
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 40rpx 20rpx;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.page-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
}

.card {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.card-header {
  background: #f8f9fa;
  padding: 24rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-content {
  padding: 24rpx;
}

.optimization-info {
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
  margin-right: 16rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  line-height: 1.4;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
  margin-bottom: 24rpx;
}

.btn-primary:disabled {
  opacity: 0.6;
}

.btn-large {
  padding: 32rpx 48rpx;
  font-size: 36rpx;
}

.btn-outline {
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  width: 100%;
}

.optimization-tips {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.tip-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.result-success {
  text-align: center;
  padding: 40rpx 20rpx;
}

.result-error {
  text-align: center;
  padding: 40rpx 20rpx;
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.result-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 24rpx;
}



