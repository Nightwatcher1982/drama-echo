}

.rank-1 { background: linear-gradient(45deg, #ffd700, #ffed4e); color: #b8860b; }
.rank-2 { background: linear-gradient(45deg, #c0c0c0, #e5e5e5); color: #696969; }
.rank-3 { background: linear-gradient(45deg, #cd7f32, #daa520); color: #8b4513; }
.rank-other { background: #f0f0f0; color: #999; }

.fan-info {
  flex: 1;
}

.fan-name {
  font-weight: 500;
  font-size: 28rpx;
  margin-bottom: 4rpx;
  color: #2c2c2c;
}

.purchase-count {
  font-size: 24rpx;
  color: #666;
}

.support-level {
  text-align: right;
}

.star-level {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.level-text {
  font-size: 22rpx;
  font-weight: 500;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  background: #f0f0f0;
  color: #666;
}

.rank-1 .level-text {
  background: linear-gradient(45deg, #ffd700, #ffed4e);
  color: #b8860b;
}

.rank-2 .level-text {
  background: linear-gradient(45deg, #c0c0c0, #e5e5e5);
  color: #696969;
}

/* Á©∫Áä∂ÊÄÅ */
.empty-ranking {
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* ËØ≠Èü≥ÂåÖÂ±ïÁ§∫ */
.voice-packs {
  margin: 0 30rpx 40rpx;
}

.packs-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.pack-item {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.08);
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.pack-item:active {
  transform: translateY(-4rpx);
}

.pack-item.selected {
  border-color: #4facfe;
  background: #f0f9ff;
}

.pack-item.purchased {
  background: #f0fff4;
  border-color: #52c41a;
}

.pack-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: transparent;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

.pack-name {
  font-weight: 500;
  font-size: 26rpx;
