  margin-bottom: 16rpx;
}

.pack-sales {
  font-size: 22rpx;
  color: #999;
  background: #f8f8f8;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 16rpx;
}

