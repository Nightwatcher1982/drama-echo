  display: inline-block;
  width: 100%;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.buy-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.3);
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

