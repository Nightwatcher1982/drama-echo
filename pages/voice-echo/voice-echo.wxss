/* 统一按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.btn-primary::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  transition: all 0.6s;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.btn-primary:active::after {
  width: 600rpx;
  height: 600rpx;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

/* 进入按钮使用统一样式 */
.enter-actor-space {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.enter-actor-space::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  transition: all 0.6s;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.enter-actor-space:active::after {
  width: 600rpx;
  height: 600rpx;
}

.enter-actor-space:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

/* 底部空白 */
.bottom-spacing {
  height: 60rpx;
}