/* 戏剧回响首页样式 */

.container {
  min-height: 100vh;
  background: #f8f9fa;
  color: #333;
}

/* 顶部导航 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  padding: 25rpx 40rpx 30rpx;
  text-align: center;
  position: relative;
  z-index: 10;
}

.app-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
}

.app-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 空数据状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.empty-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.empty-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

/* 加载状态 */
.loading-container {
  padding: 200rpx 0;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 轮播图容器 */
.carousel-swiper { height: 640rpx; background:#000; }

.carousel-wrapper {
  display: flex;
  height: 100%;
  transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.carousel-slide {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.slide-cover {
  width: 100%; 
  height: 100%;
  object-fit: cover;
}

/* 轮播背景色 - 移除渐变效果 */
.slide1 { background: transparent; }
.slide2 { background: transparent; }
.slide3 { background: transparent; }
.slide4 { background: transparent; }

/* 叠层效果已移除 */

.slide-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
  z-index: 2;
}

.slide-avatar {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(20rpx);
  border: 6rpx solid rgba(255,255,255,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  font-weight: bold;
  margin: 0 auto 30rpx;
  transition: all 0.3s ease;
}

.slide-name {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
}

.slide-title {
  font-size: 28rpx;
  opacity: 0.9;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.3);
}

/* 状态标签 */
.status-badges {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  justify-content: space-between;
  z-index: 3;
}

.badge {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  font-weight: 600;
  backdrop-filter: blur(20rpx);
}

.hot-badge {
  background: rgba(255, 71, 87, 0.9);
  color: white;
  animation: pulse 2s infinite;
}

.new-badge {
  background: rgba(46, 213, 115, 0.9);
  color: white;
}

.online-badge {
  background: rgba(46, 213, 115, 0.9);
  color: white;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.online-dot {
  width: 12rpx;
  height: 12rpx;
  background: white;
  border-radius: 50%;
  animation: blink 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.3; }
}

/* 轮播指示器 */
.carousel-indicators {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 16rpx;
  z-index: 3;
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.4);
  transition: all 0.3s ease;
}

.indicator.active {
  background: white;
  transform: scale(1.2);
}

/* 轮播导航按钮 */
.carousel-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255,255,255,0.3);
  color: white;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
  z-index: 3;
}

.carousel-nav:active {
  background: rgba(255,255,255,0.3);
  transform: translateY(-50%) scale(1.1);
}

.carousel-prev {
  left: 30rpx;
}

.carousel-next {
  right: 30rpx;
}

/* 演员信息区域 */
.actor-info-section {
  padding: 50rpx 40rpx;
  background: white;
  position: relative;
  z-index: 2;
}

.actor-details {
  opacity: 1;
  transform: translateY(0);
  transition: all 0.4s ease;
}

.actor-name-display {
  font-size: 52rpx;
  font-weight: 700;
  color: #2c2c2c;
  text-align: center;
  margin-bottom: 16rpx;
}

.actor-title-display {
  font-size: 30rpx;
  color: #667eea;
  text-align: center;
  margin-bottom: 30rpx;
  font-weight: 500;
}

.actor-description {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 50rpx;
  padding: 0 20rpx;
}

.stats-container {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  margin-bottom: 50rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

