page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  padding: 40rpx;
}

/* 信息卡片 */
.info-card, .config-card, .admin-section, .help-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 16rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid #667eea;
}

.default-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.user-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
}

.user-status.admin {
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  color: white;
}

.user-status.normal {
  background: linear-gradient(135deg, #74b9ff, #0984e3);
  color: white;
}

.copy-btn {
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 24rpx;
}

.copy-btn::after {
  border: none;
}

/* 系统配置 */
.config-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.config-item:last-child {
  border-bottom: none;
}

.config-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.config-value {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.config-value.enabled {
  background: rgba(34, 197, 94, 0.1);
  color: #22C55E;
  border: 1rpx solid rgba(34, 197, 94, 0.2);
}

.config-value.disabled {
  background: rgba(239, 68, 68, 0.1);
  color: #EF4444;
  border: 1rpx solid rgba(239, 68, 68, 0.2);
}

/* 管理员区域 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #10B981, #059669);
  color: white;
  border: none;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.add-btn::after {
  border: none;
}

/* 管理员列表 */
.admin-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.admin-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 1rpx solid #e9ecef;
}

.admin-info {
  flex: 1;
  min-width: 0;
}

.admin-type {
  font-size: 20rpx;
  color: #667eea;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.admin-openid {
  font-size: 22rpx;
  color: #333;
  margin-bottom: 4rpx;
  padding: 8rpx 12rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx dashed #ddd;
  word-break: break-all;
  font-family: monospace;
}

.admin-nickname {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.admin-remark {
  font-size: 20rpx;
  color: #666;
}

.admin-warning {
  font-size: 20rpx;
  color: #f59e0b;
  margin-top: 4rpx;
}

/* 管理员操作 */
.admin-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.original-tag {
  font-size: 20rpx;
  color: #059669;
  background: rgba(16, 185, 129, 0.1);
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(16, 185, 129, 0.2);
}

.delete-btn {
  padding: 8rpx 16rpx;
  background: rgba(239, 68, 68, 0.1);
  color: #EF4444;
  border: 1rpx solid rgba(239, 68, 68, 0.2);
  border-radius: 8rpx;
  font-size: 20rpx;
}

.delete-btn[disabled] {
  opacity: 0.5;
}

.delete-btn::after {
  border: none;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #666;
}

.empty-text {
  font-size: 24rpx;
}

/* 帮助区域 */
.help-content {
  line-height: 1.6;
}

.help-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.help-number {
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
  margin-right: 12rpx;
  min-width: 32rpx;
}

.help-text {
  font-size: 24rpx;
  color: #555;
  flex: 1;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.add-modal {
  width: 600rpx;
  max-width: 90vw;
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.modal-overlay.show .add-modal {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 16rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #666;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background 0.2s;
}

.modal-close:active {
  background: #f0f0f0;
}

/* 表单样式 */
.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #333;
}

.form-input:focus {
  border-color: #667eea;
}

.warning-text {
  font-size: 22rpx;
  color: #f59e0b;
  background: rgba(245, 158, 11, 0.1);
  padding: 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(245, 158, 11, 0.2);
  margin-top: 16rpx;
  line-height: 1.4;
}

/* 弹窗操作 */
.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #e9ecef;
}

.cancel-btn::after {
  border: none;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.confirm-btn::after {
  border: none;
}

.cancel-btn:active {
  background: #e9ecef;
}

.confirm-btn:active {
  opacity: 0.9;
}