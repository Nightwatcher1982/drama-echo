/* 唱片机风格语音播放器组件样式 */
.voice-player-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  pointer-events: none;
}

.voice-player-container.open {
  pointer-events: auto;
}

/* 播放器背景遮罩 */
.player-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.player-overlay.show {
  opacity: 1;
  visibility: visible;
}

/* 播放器主体 */
.voice-player {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%) scale(0.8);
  width: 680rpx;
  max-width: 90vw;
  max-height: 90vh;
  background: linear-gradient(145deg, rgba(139, 69, 19, 0.95), rgba(160, 82, 45, 0.9));
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3), 
              inset 0 4rpx 20rpx rgba(255, 255, 255, 0.1);
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  overflow-y: auto;
}

.voice-player.show {
  opacity: 1;
  visibility: visible;
  transform: translate(-50%, -50%) scale(1);
}

/* 播放器头部 */
.player-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
}

.player-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFE4B5;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.player-subtitle {
  font-size: 24rpx;
  color: rgba(255, 228, 181, 0.8);
  margin-top: 4rpx;
}

.close-btn {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.8);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
  background: rgba(0, 0, 0, 0.2);
}

.close-btn:active {
  background: rgba(0, 0, 0, 0.4);
  transform: scale(0.9);
}

/* 唱片机主体 */
.record-player {
  background: linear-gradient(145deg, #8B4513, #A0522D);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: inset 0 8rpx 20rpx rgba(0, 0, 0, 0.3),
              inset 0 -4rpx 10rpx rgba(255, 255, 255, 0.1);
}

/* 唱片盘 */
.record-disc {
  position: relative;
  width: 400rpx;
  height: 400rpx;
  margin: 0 auto 40rpx;
  background: linear-gradient(45deg, #1a1a1a, #2d2d2d);
  border-radius: 50%;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.5),
              inset 0 4rpx 10rpx rgba(255, 255, 255, 0.1);
  transition: transform 0.3s ease;
}

.record-disc.spinning {
  animation: spin 3s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 唱片纹理 */
.record-grooves {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
}

.groove {
  position: absolute;
  border-radius: 50%;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
}

.groove-1 {
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  bottom: 40rpx;
}

.groove-2 {
  top: 80rpx;
  left: 80rpx;
  right: 80rpx;
  bottom: 80rpx;
}

.groove-3 {
  top: 120rpx;
  left: 120rpx;
  right: 120rpx;
  bottom: 120rpx;
}

.groove-4 {
  top: 160rpx;
  left: 160rpx;
  right: 160rpx;
  bottom: 160rpx;
}

.groove-5 {
  top: 200rpx;
  left: 200rpx;
  right: 200rpx;
  bottom: 200rpx;
}

/* 唱片中心 */
.record-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(45deg, #CD853F, #DEB887);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.center-hole {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  background: #1a1a1a;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.center-label {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.label-text {
  font-size: 32rpx;
  z-index: 1;
}

/* 唱臂 */
.tone-arm {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 200rpx;
  height: 200rpx;
  transform-origin: 80% 20%;
  transition: transform 0.5s ease;
}

.tone-arm.rest {
  transform: rotate(-30deg);
}

.tone-arm.playing {
  transform: rotate(0deg);
}

.arm-base {
  position: absolute;
  top: 0;
  right: 40rpx;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(45deg, #8B4513, #A0522D);
  border-radius: 50%;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.arm-shaft {
  position: absolute;
  top: 20rpx;
  right: 50rpx;
  width: 6rpx;
  height: 160rpx;
  background: linear-gradient(to bottom, #C0C0C0, #808080);
  border-radius: 3rpx;
  transform-origin: top center;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.arm-head {
  position: absolute;
  bottom: 20rpx;
  right: 45rpx;
  width: 16rpx;
  height: 16rpx;
  background: #FFD700;
  border-radius: 50%;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 控制台 */
.control-panel {
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
}

/* 音量控制 */
.volume-control {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
}

.volume-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #FFE4B5;
}

.volume-slider {
  flex: 1;
  height: 8rpx;
}

/* 进度控制 */
.progress-control {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
}

.time-display {
  font-size: 24rpx;
  color: #FFE4B5;
  min-width: 80rpx;
  text-align: center;
}

.progress-slider {
  flex: 1;
  margin: 0 20rpx;
  height: 8rpx;
}

/* 主控制按钮 */
.main-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(45deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.1));
  border-radius: 50%;
  font-size: 32rpx;
  color: #FFE4B5;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.control-btn:active {
  transform: scale(0.9);
  background: linear-gradient(45deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.2));
}

.play-btn {
  width: 100rpx;
  height: 100rpx;
  font-size: 40rpx;
  background: linear-gradient(45deg, #ff6b6b, #ff5252);
}

.play-btn.playing {
  background: linear-gradient(45deg, #4CAF50, #45a049);
}

/* 播放列表区域 */
.playlist-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.playlist-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
}

.playlist-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #FFE4B5;
}

.playlist-toggle {
  font-size: 24rpx;
  color: rgba(255, 228, 181, 0.8);
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.playlist-toggle:active {
  transform: scale(0.95);
}

/* 播放列表 */
.playlist {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.playlist.show {
  max-height: 300rpx;
}

.playlist-scroll {
  margin-top: 16rpx;
}

.playlist-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 16rpx;
  margin-bottom: 8rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.playlist-item.current {
  background: rgba(255, 107, 107, 0.3);
  border: 2rpx solid #ff6b6b;
}

.playlist-item:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.1);
}

.track-info {
  flex: 1;
  min-width: 0;
}

.track-name {
  font-size: 26rpx;
  color: #FFE4B5;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.track-duration {
  font-size: 22rpx;
  color: rgba(255, 228, 181, 0.7);
}

.track-status {
  font-size: 24rpx;
  margin-left: 16rpx;
  color: #FFE4B5;
}

/* 播放列表空状态 */
.playlist-empty {
  text-align: center;
  padding: 40rpx;
  color: rgba(255, 228, 181, 0.6);
}

.empty-text {
  font-size: 24rpx;
}

/* 播放器底部 */
.player-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(255, 255, 255, 0.2);
}

.playback-mode {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  transition: all 0.3s ease;
}

.playback-mode:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}

.mode-icon {
  font-size: 24rpx;
}

.mode-text {
  font-size: 22rpx;
  color: #FFE4B5;
}

.player-info {
  text-align: right;
}

.info-text {
  font-size: 20rpx;
  color: rgba(255, 228, 181, 0.7);
  margin-bottom: 4rpx;
}

.copyright {
  font-size: 18rpx;
  color: rgba(255, 228, 181, 0.5);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .voice-player {
    width: 95vw;
    padding: 30rpx;
  }
  
  .record-disc {
    width: 300rpx;
    height: 300rpx;
  }
  
  .groove-1 { top: 30rpx; left: 30rpx; right: 30rpx; bottom: 30rpx; }
  .groove-2 { top: 60rpx; left: 60rpx; right: 60rpx; bottom: 60rpx; }
  .groove-3 { top: 90rpx; left: 90rpx; right: 90rpx; bottom: 90rpx; }
  .groove-4 { top: 120rpx; left: 120rpx; right: 120rpx; bottom: 120rpx; }
  .groove-5 { top: 150rpx; left: 150rpx; right: 150rpx; bottom: 150rpx; }
  
  .tone-arm {
    width: 150rpx;
    height: 150rpx;
  }
  
  .arm-shaft {
    height: 120rpx;
  }
}

/* 动画效果 */
@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.control-btn.playing .play-btn {
  animation: pulse 2s infinite;
}

