/* 泡泡球样式 */
.bubble-container {
  position: relative;
  height: 300rpx;
  overflow: hidden;
  margin: 40rpx 0;
}

.bubble {
  position: absolute;
  background: linear-gradient(135deg, rgba(255, 154, 139, 0.3), rgba(255, 215, 0, 0.2));
  border: 1px solid rgba(255, 154, 139, 0.4);
  border-radius: 50%;
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #5D4E75;
  font-size: 24rpx;
  text-align: center;
  padding: 16rpx;
  line-height: 1.3;
  cursor: pointer;
  transition: all 0.3s ease;
  animation: bubbleFloat 6s ease-in-out infinite;
}

.bubble:nth-child(1) {
  width: 120rpx;
  height: 120rpx;
  top: 20rpx;
  left: 10%;
  animation-delay: 0s;
}

.bubble:nth-child(2) {
  width: 100rpx;
  height: 100rpx;
  top: 80rpx;
  right: 15%;
  animation-delay: 2s;
}

.bubble:nth-child(3) {
  width: 140rpx;
  height: 140rpx;
  top: 150rpx;
  left: 20%;
  animation-delay: 4s;
}

.bubble:nth-child(4) {
  width: 110rpx;
  height: 110rpx;
  top: 50rpx;
  left: 50%;
  animation-delay: 1s;
}

.bubble:nth-child(5) {
  width: 90rpx;
  height: 90rpx;
  top: 180rpx;
  right: 30%;
  animation-delay: 3s;
}

@keyframes bubbleFloat {
  0%, 100% {
    transform: translateY(0px) scale(1);
    opacity: 0.8;
  }
  25% {
    transform: translateY(-15px) scale(1.05);
    opacity: 1;
  }
  50% {
    transform: translateY(-8px) scale(0.95);
    opacity: 0.9;
  }
  75% {
    transform: translateY(-12px) scale(1.02);
    opacity: 1;
  }
}

.bubble:active {
  transform: scale(0.9);
  background: linear-gradient(135deg, rgba(255, 154, 139, 0.5), rgba(255, 215, 0, 0.4));
} 