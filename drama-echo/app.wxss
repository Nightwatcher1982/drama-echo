/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #FF9A8B, #FFD700);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8px 24px rgba(255, 154, 139, 0.3);
  transition: all 0.3s ease;
}

.btn-secondary {
  background: linear-gradient(135deg, #98D8C8, #F7DC6F);
  color: white;
  border: none;
  border-radius: 24rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8px 24px rgba(152, 216, 200, 0.3);
  transition: all 0.3s ease;
}

.btn-outline {
  background: transparent;
  color: #5D4E75;
  border: 2px solid rgba(255, 154, 139, 0.6);
  border-radius: 24rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.btn-primary:active, .btn-secondary:active, .btn-outline:active {
  transform: scale(0.98);
}

.btn-outline:active {
  background: rgba(255, 154, 139, 0.15);
}

