/* 全局样式设置 */
page {
  background: #c8a1f1 linear-gradient(155deg, #CC96E3 0%,#F7C8F4 25%,#dacadb 35%, #A36BD1 50%, #FAD4F5 100%) no-repeat !important;
  
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  line-height: 1.6;
  color: #5D4E75;
  position: relative;
  overflow-x: hidden;
  
  /* 兼容性优化 */
  -webkit-text-size-adjust: 100%;
  -ms-text-size-adjust: 100%;
  text-size-adjust: 100%;
  -webkit-user-select: none;
  user-select: none;
  -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
}

/* 动态背景装饰 */
page::before {
  content: '';
  position: fixed;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
  z-index: -1;
}

page::after {
  content: '';
  position: fixed;
  bottom: -30%;
  left: -10%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite reverse;
  z-index: -1;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(180deg);
  }
}


/* 通用容器样式优化 */
.glass-card {
  /* 确保在不同设备上的一致显示 */
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  transform: translateZ(0);
  -webkit-transform: translateZ(0);
}

/* 响应式字体大小 */
.page-title {
  font-size: clamp(48rpx, 7vw, 64rpx);
  font-weight: bold;
  color: #5D4E75;
  text-align: center;
  margin-bottom: 16rpx;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.15);
}

.page-subtitle {
  font-size: clamp(24rpx, 4vw, 32rpx);
  color: #5D4E75;
  opacity: 0.8;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 按钮通用优化 */
button {
  /* 防止点击时的闪烁 */
  -webkit-tap-highlight-color: transparent;
  tap-highlight-color: transparent;
  
  /* 确保按钮在所有设备上的一致性 */
  outline: none;
  border: none;
  box-sizing: border-box;
}

/* 小屏幕全局优化 */
@media screen and (max-width: 650rpx) {
  .page-title {
    font-size: 46rpx;
    margin-bottom: 12rpx;
  }
  
  .page-subtitle {
    font-size: 26rpx;
    margin-bottom: 32rpx;
  }
  
  .glass-card {
    margin: 0 16rpx 32rpx 16rpx;
    padding: 32rpx 24rpx;
  }
}

/* 大屏幕全局优化 */
@media screen and (min-width: 900rpx) {
  .page-title {
    font-size: 68rpx;
    margin-bottom: 20rpx;
  }
  
  .page-subtitle {
    font-size: 36rpx;
    margin-bottom: 48rpx;
  }
  
  .glass-card {
    max-width: 800rpx;
    margin: 0 auto 40rpx auto;
    padding: 48rpx 40rpx;
  }
  
  /* 大屏幕背景装饰优化 */
  page::before {
    width: 500rpx;
    height: 500rpx;
  }
  
  page::after {
    width: 400rpx;
    height: 400rpx;
  }
}

