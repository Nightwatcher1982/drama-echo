/* 测试演员图片显示页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.content {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.refresh-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.refresh-btn:disabled {
  opacity: 0.6;
}

.actors-list {
  margin-top: 20rpx;
}

.actor-card {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #e9ecef;
}

.actor-header {
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #e9ecef;
}

.actor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.actor-id {
  font-size: 24rpx;
  color: #666;
}

.image-section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding: 10rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 10rpx;
  text-align: center;
}

.image-display {
  background: white;
  border-radius: 10rpx;
  padding: 15rpx;
  border: 2rpx solid #e9ecef;
}

.cover-image {
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}

.images-grid {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.detail-image-item {
  flex: 1;
  min-width: 150rpx;
  max-width: 200rpx;
}

.detail-image {
  width: 100%;
  height: 150rpx;
  border-radius: 10rpx;
}

.no-image {
  width: 100%;
  height: 100rpx;
  background: #f8f9fa;
  border: 2rpx dashed #dee2e6;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.test-actions {
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid #e9ecef;
}

.test-btn {
  width: 100%;
  background: #28a745;
  color: white;
  border: none;
  border-radius: 10rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.test-btn:active {
  background: #218838;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}
