<!--戏剧回响页面-->
<view class="container">
  <!-- 顶部标题卡片 -->
  <view class="title-card">
    <view class="title-content">
      <view class="title-text">戏剧回响</view>
      <view class="subtitle-text">收藏你喜爱演员的专属声音</view>
    </view>
  </view>

  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-container">
    <view class="loading-spinner"></view>
    <view class="loading-text">加载中...</view>
  </view>

  <!-- 空数据状态 -->
  <view wx:elif="{{!loading && actorsData.length === 0}}" class="empty-container">
    <view class="empty-icon">🎭</view>
    <view class="empty-text">暂无演员数据</view>
    <view class="empty-desc">请先初始化示例数据</view>
    <button class="empty-btn" bind:tap="goToInit">初始化数据</button>
  </view>

  <!-- 主要内容区域 -->
  <view wx:elif="{{!loading && currentActor}}" class="main-content">
    <!-- 演员头像区域 -->
    <view class="actor-avatar-section">
      <image class="actor-avatar" mode="aspectFill" src="{{currentActor.imageUrl}}" />
    </view>

    <!-- 演员信息卡片 -->
    <view class="actor-info-card">
      <view class="actor-header">
        <view class="actor-name">{{currentActor.name}}</view>
        <view class="actor-title">{{currentActor.title}}</view>
      </view>
      
      <view class="actor-description">{{currentActor.description}}</view>
      
      <view class="stats-row">
        <view class="stat-box">
          <view class="stat-number">{{currentActor.stats.guardianCount}}</view>
          <view class="stat-label">守护者</view>
        </view>
        <view class="stat-box">
          <view class="stat-number">{{currentActor.stats.voicePackCount}}</view>
          <view class="stat-label">语音包</view>
        </view>
      </view>
      
      <button class="enter-space-btn" bind:tap="enterActorSpace">
        <text class="btn-text">进入专属空间</text>
        <image class="star-icon" src="/images/figma-assets/star-decoration.png" mode="aspectFit"></image>
      </button>
    </view>
  </view>

  <!-- 轮播指示器 -->
  <view wx:if="{{!loading && allImages.length > 1}}" class="carousel-indicators">
    <view wx:for="{{allImages}}" wx:key="index" class="indicator {{currentSlide === index ? 'active' : ''}}" bindtap="onIndicatorTap" data-index="{{index}}"></view>
  </view>

  <view class="bottom-spacing"></view>
</view>