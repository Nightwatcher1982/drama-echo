/* 戏剧回响页面样式 - 基于Figma精确数据 */

/* 确保页面全屏显示 */
page {
  width: 100% !important;
  height: 100% !important;
  margin: 0 !important;
  padding: 0 !important;
  overflow-x: visible !important;
}

.container {
  width: 686rpx;
  min-height: 100vh;
  background: transparent;
  color: #333;
  position: relative;
  padding: 0;
  margin: 0 auto;
  box-sizing: border-box;
}

/* 顶部标题卡片 - 基于Figma Frame 1321319070 */
.title-card {
  margin: 24rpx auto;
  background: rgba(255, 255, 255, 0.49);
  backdrop-filter: blur(4rpx);
  border-radius: 48rpx;
  border: 0.5px solid rgba(242, 233, 246, 1);
  box-shadow: 0 4rpx 12rpx rgba(187, 155, 228, 0.4);
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.title-text {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 48rpx;
  font-weight: 500;
  background: -webkit-linear-gradient(10deg,#6A31A6, #8A37A3);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1em;
  text-align: center;
}

.subtitle-text {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 24rpx;
  font-weight: 300;
  color: #5F639C;
  line-height: 1em;
  text-align: center;
}

/* 主要内容区域 - 基于Figma Frame 1321319069 */
.main-content {
  margin: 24rpx auto;
  background: rgba(255, 255, 255, 0.49);
  backdrop-filter: blur(4rpx);
  border-radius: 48rpx;
  border: 0.5px solid rgba(242, 233, 246, 1);
  box-shadow: 0 4rpx 12rpx rgba(187, 155, 228, 0.4);
  overflow: hidden;
  min-height: 640rpx;
}

/* 演员头像区域 - 基于Figma image 44 */
.actor-avatar-section {
  position: relative;
  height: 640rpx;
  overflow: hidden;
}

.actor-avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 演员信息卡片 - 基于Figma Frame 1321319073 */
.actor-info-card {
  padding: 0;
  margin-top: -48rpx;
  background: linear-gradient(180deg, #F5DEFC 0%, #fff 20%);
  backdrop-filter: blur(4rpx);
  border-radius: 48rpx;
  min-height: 320rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

/* 渐变背景 - 基于Figma Rectangle 2768 */
.actor-info-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 64rpx;
  z-index: 1;
}

.actor-header {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  gap: 8rpx;
  margin: 20rpx 24rpx 8rpx;
  padding-top: 24rpx;
  position: relative;
  z-index: 2;
}

.actor-name {
  min-width: 80px;
  max-width: 200px;
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  line-height: 1em;
}

.actor-title {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 24rpx;
  font-weight: 400;
  color: #8C36A3;
  line-height: 1.4em;
}

.actor-description {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 20rpx;
  font-weight: 300;
  color: #333333;
  line-height: 1.5em;
  margin: 58rpx 24rpx 30rpx;
  padding: 0 4rpx;
  position: relative;
  z-index: 2;
}

/* 统计数据行 - 基于Figma Frame 1321319076 */
.stats-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin: 24rpx 24rpx 12rpx;
  position: relative;
  z-index: 2;
}

.stat-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 8rpx;
  padding: 24rpx 0;
  background: linear-gradient(180deg, rgba(97, 46, 164, 1) 0%, rgba(150, 58, 162, 1) 100%);
  border-radius: 24rpx;
}

.stat-number {
  font-family: 'D-DIN', monospace;
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1em;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

.stat-label {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 1em;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* 进入专属空间按钮 - 基于Figma Frame 1321319078 */
.enter-space-btn {
  width: 624rpx !important;
  height: 100rpx;
  background: linear-gradient(180deg, rgba(149, 0, 229, 1) 0%, rgba(195, 29, 237, 1) 100%);
  border: 1px solid rgba(119, 5, 180, 1);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  position: relative;
  overflow: hidden;
  margin: 24rpx 0 36rpx;
  box-shadow: 0px 0px 0px 5px rgba(255, 255, 255, 1), 
              0px 0px 0px 4px rgba(243, 234, 248, 1), 
              0px 3.713615894317627px 4.845815658569336px 0px rgba(149, 0, 229, 0.15), 
              0px 10.267672538757324px 13.39806079864502px 0px rgba(149, 0, 229, 0.22), 
              inset 0px 1px 4px 2px rgba(242, 217, 255, 1), 
              inset 0px 1px 18px 2px rgba(242, 217, 255, 1);
  z-index: 10;
  opacity: 1;
  visibility: visible;
}

.btn-text {
  font-family: 'Douyin Sans', sans-serif;
  font-size: 32rpx;
  font-weight: 700;
  color: #ECDBF3;
  line-height: 1em;
}

.star-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 空数据状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.empty-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.empty-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

/* 加载状态 */
.loading-container {
  padding: 200rpx 0;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  color: #666;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 轮播图容器 */
.carousel-swiper { height: 640rpx; background:#000; }

.carousel-wrapper {
  display: flex;
  height: 100%;
  transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

.carousel-slide {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.slide-cover {
  width: 100%; 
  height: 100%;
  object-fit: cover;
}

/* 轮播背景色 - 移除渐变效果 */
.slide1 { background: transparent; }
.slide2 { background: transparent; }
.slide3 { background: transparent; }
.slide4 { background: transparent; }

/* 叠层效果已移除 */

.slide-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: white;
  z-index: 2;
}

.slide-avatar {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(20rpx);
  border: 6rpx solid rgba(255,255,255,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  font-weight: bold;
  margin: 0 auto 30rpx;
  transition: all 0.3s ease;
}

.slide-name {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 20rpx rgba(0,0,0,0.3);
}

.slide-title {
  font-size: 28rpx;
  opacity: 0.9;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.3);
}

/* 状态标签 */
.status-badges {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  right: 40rpx;
  display: flex;
  justify-content: space-between;
  z-index: 3;
}

.badge {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  font-weight: 600;
  backdrop-filter: blur(20rpx);
}

.hot-badge {
  background: rgba(255, 71, 87, 0.9);
  color: white;
  animation: pulse 2s infinite;
}

.new-badge {
  background: rgba(46, 213, 115, 0.9);
  color: white;
}

.online-badge {
  background: rgba(46, 213, 115, 0.9);
  color: white;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.online-dot {
  width: 12rpx;
  height: 12rpx;
  background: white;
  border-radius: 50%;
  animation: blink 1.5s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0.3; }
}

/* 轮播指示器 */
.carousel-indicators {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin: 24rpx 0;
  padding: 0 16rpx;
}

.indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.16);
  transition: all 0.3s ease;
}

.indicator.active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(1.2);
}

/* 轮播导航按钮 */
.carousel-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255,255,255,0.3);
  color: white;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  transition: all 0.3s ease;
  z-index: 3;
}

.carousel-nav:active {
  background: rgba(255,255,255,0.3);
  transform: translateY(-50%) scale(1.1);
}

.carousel-prev {
  left: 30rpx;
}

.carousel-next {
  right: 30rpx;
}

/* 演员信息区域 */
.actor-info-section {
  padding: 50rpx 40rpx;
  background: white;
  position: relative;
  z-index: 2;
}

.actor-details {
  opacity: 1;
  transform: translateY(0);
  transition: all 0.4s ease;
}

.actor-name-display {
  font-size: 52rpx;
  font-weight: 700;
  color: #2c2c2c;
  text-align: center;
  margin-bottom: 16rpx;
}

.actor-title-display {
  font-size: 30rpx;
  color: #667eea;
  text-align: center;
  margin-bottom: 30rpx;
  font-weight: 500;
}

.actor-description {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  line-height: 1.6;
  margin-bottom: 50rpx;
  padding: 0 20rpx;
}

.stats-container {
  display: flex;
  justify-content: center;
  gap: 80rpx;
  margin-bottom: 50rpx;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #667eea;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

/* 精选语音包区域已移除 */

/* 统一按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  width: 100%;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.btn-primary::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  transition: all 0.6s;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.btn-primary:active::after {
  width: 600rpx;
  height: 600rpx;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

/* 进入按钮使用统一样式 */
.enter-actor-space {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  width: calc(100% - 60rpx);
  margin: 0 30rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
  white-space: nowrap;
  text-align: center;
}

.enter-actor-space::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255,255,255,0.2);
  transition: all 0.6s;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.enter-actor-space:active::after {
  width: 600rpx;
  height: 600rpx;
}

.enter-actor-space:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

/* 底部空白 */
.bottom-spacing {
  height: 60rpx;
}