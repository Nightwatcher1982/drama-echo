<view class="container">
  <!-- 页面标题 -->
  <view class="header">
    <view class="title">选择星座</view>
    <view class="subtitle">选择你的星座，完成设置</view>
  </view>
  
  <!-- 12星座选择网格 -->
  <view class="zodiac-grid">
    <view class="zodiac-item" wx:for="{{zodiacSigns}}" wx:key="name" bindtap="selectZodiac" data-zodiac="{{item}}">
      <view class="zodiac-symbol">{{item.symbol}}</view>
      <view class="zodiac-name">{{item.name}}</view>
      <view class="zodiac-dates">{{item.dates}}</view>
    </view>
  </view>
</view> 