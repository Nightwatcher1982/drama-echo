/* 测试守护者显示页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.content {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.refresh-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.refresh-btn:disabled {
  opacity: 0.6;
}

.actors-list {
  margin-top: 20rpx;
}

.actor-card {
  background: #f8f9fa;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid #e9ecef;
}

.actor-header {
  margin-bottom: 15rpx;
}

.actor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.actor-id {
  font-size: 24rpx;
  color: #666;
}

.actor-stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 15rpx;
  padding: 15rpx;
  background: white;
  border-radius: 10rpx;
}

.stat-item {
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.stat-value {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.guardian-count {
  color: #e74c3c !important;
  font-size: 36rpx !important;
}

.actor-details {
  background: white;
  border-radius: 10rpx;
  padding: 15rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.value {
  font-size: 22rpx;
  color: #333;
  word-break: break-all;
  background: #f8f9fa;
  padding: 10rpx;
  border-radius: 5rpx;
}

.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}
