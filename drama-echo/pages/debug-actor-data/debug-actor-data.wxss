.container {
  padding: 20rpx;
  background: #f5f7fb;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1f2937;
}

.subtitle {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,.06);
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin: 24rpx 0 16rpx 0;
  border-bottom: 2rpx solid #e5e7eb;
  padding-bottom: 8rpx;
}

.info-item {
  display: flex;
  margin-bottom: 12rpx;
  align-items: flex-start;
}

.label {
  font-size: 26rpx;
  color: #6b7280;
  width: 200rpx;
  flex-shrink: 0;
}

.value {
  font-size: 26rpx;
  color: #111827;
  flex: 1;
  word-break: break-all;
}

.image-preview {
  margin: 16rpx 0;
  text-align: center;
}

.preview-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
}

.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin: 16rpx 0;
}

.image-item {
  position: relative;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.grid-image {
  width: 100%;
  height: 100%;
}

.image-index {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 20rpx;
  padding: 2rpx 6rpx;
  border-radius: 4rpx;
}

.data-display {
  background: #f9fafb;
  border-radius: 8rpx;
  padding: 16rpx;
  margin: 16rpx 0;
  max-height: 400rpx;
  overflow-y: auto;
}

.data-text {
  font-size: 22rpx;
  color: #374151;
  font-family: monospace;
  white-space: pre-wrap;
  word-break: break-all;
}

.btn-primary {
  background: #2563eb;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  margin-top: 20rpx;
}

.loading {
  text-align: center;
  color: #6b7280;
  font-size: 26rpx;
  padding: 40rpx;
}

.empty {
  text-align: center;
  color: #9ca3af;
  padding: 40rpx;
  font-size: 26rpx;
}








