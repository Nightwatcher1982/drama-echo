.debug-container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.debug-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
}

.debug-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.debug-actions {
  display: flex;
  gap: 20rpx;
}

.debug-btn {
  padding: 10rpx 20rpx;
  background: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.debug-btn::after {
  border: none;
}

.debug-section {
  margin-bottom: 30rpx;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.section-title {
  display: block;
  padding: 20rpx;
  background: #f8f9fa;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  border-bottom: 1rpx solid #e9ecef;
}

.debug-content {
  padding: 20rpx;
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.file-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.file-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.file-item:active {
  background: #f8f9fa;
}

.file-actor {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.file-url {
  display: block;
  font-size: 22rpx;
  color: #666;
  word-break: break-all;
}

.test-btn {
  margin: 20rpx;
  padding: 20rpx;
  background: #28a745;
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.test-btn::after {
  border: none;
}

.test-results {
  max-height: 300rpx;
  overflow-y: auto;
}

.test-result {
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.test-result.success {
  background: #d4edda;
}

.test-result.failed {
  background: #f8d7da;
}

.result-time {
  display: block;
  font-size: 20rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.result-status {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.result-error {
  display: block;
  font-size: 22rpx;
  color: #721c24;
  word-break: break-all;
}

.debug-log {
  max-height: 500rpx;
  overflow-y: auto;
}

.log-item {
  padding: 15rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 22rpx;
  line-height: 1.4;
}

.log-time {
  color: #999;
  margin-right: 10rpx;
}

.log-title {
  color: #007aff;
  font-weight: 600;
  margin-right: 10rpx;
}

.log-content {
  color: #333;
  word-break: break-all;
}



