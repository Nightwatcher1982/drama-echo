/* 许愿池管理页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.header-actions {
  display: flex;
  gap: 20rpx;
}

.btn-refresh {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 标签页 */
.tab-container {
  display: flex;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  font-size: 30rpx;
  color: #666;
  background: white;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: #007aff;
  color: white;
  font-weight: bold;
}

/* 搜索框 */
.search-container {
  margin-bottom: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx;
  background: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #e0e0e0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 许愿列表 */
.wish-list-container {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.wish-list {
  max-height: 1000rpx;
  overflow-y: auto;
}

.wish-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.wish-item:last-child {
  border-bottom: none;
}

.wish-item:active {
  background-color: #f8f8f8;
}

.wish-content {
  flex: 1;
  margin-right: 20rpx;
}

.wish-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.wish-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.wish-user, .wish-time {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.wish-support {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
}

.support-count {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}

.support-count.has-support {
  color: #ff6b6b;
}

.support-count.no-support {
  color: #999;
}

.support-label {
  font-size: 22rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
}

/* 数据统计 */
.stats-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #007aff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 热门许愿 */
.top-wishes {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.top-wish-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 6rpx solid #007aff;
}

.rank-number {
  width: 60rpx;
  height: 60rpx;
  background: #007aff;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.top-wish-content {
  flex: 1;
  margin-right: 20rpx;
}

.top-wish-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.top-wish-meta {
  display: flex;
  gap: 20rpx;
  font-size: 22rpx;
  color: #666;
}

.top-wish-support {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.top-wish-support .support-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 4rpx;
}

.top-wish-support .support-label {
  font-size: 20rpx;
  color: #666;
}

