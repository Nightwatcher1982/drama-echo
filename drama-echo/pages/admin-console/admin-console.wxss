/* 主容器 */
.container { 
  padding: 20rpx; 
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
  min-height: 100vh; 
}

/* 头部 */
.header { 
  text-align: center; 
  margin: 20rpx 0 30rpx; 
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.title { 
  font-size: 36rpx; 
  font-weight: 700; 
  color: #fff; 
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.subtitle { 
  font-size: 24rpx; 
  color: rgba(255, 255, 255, 0.8); 
  margin-top: 8rpx; 
}

/* 卡片 */
.card { 
  background: rgba(255, 255, 255, 0.95); 
  border-radius: 20rpx; 
  padding: 24rpx; 
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1); 
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.card.small { 
  padding: 16rpx; 
}

/* 区域标题 */
.section-header { 
  display: flex; 
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 20rpx; 
}

.section-title { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: #1f2937; 
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: flex-start;
}

/* 选择器 */
.picker { 
  padding: 20rpx; 
  background: #f8fafc; 
  border: 2rpx solid #e2e8f0; 
  border-radius: 12rpx; 
  color: #475569; 
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.picker:active {
  background: #f1f5f9;
  border-color: #cbd5e1;
}

/* 按钮样式 */
.btn-primary { 
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
  color: #fff; 
  border: none; 
  border-radius: 12rpx; 
  padding: 16rpx 24rpx; 
  font-size: 26rpx; 
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.btn-outline { 
  background: #fff; 
  color: #667eea; 
  border: 2rpx solid #667eea; 
  border-radius: 12rpx; 
  padding: 14rpx 20rpx; 
  font-size: 24rpx; 
  font-weight: 500;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.btn-outline:active {
  background: #f8fafc;
  transform: translateY(1rpx);
}

.btn-s { 
  padding: 10rpx 14rpx; 
  font-size: 22rpx; 
  border-radius: 8rpx; 
  flex-shrink: 0;
}
/* 语音包项目 */
.pack-item { 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
  padding: 20rpx; 
  border: 2rpx solid #e2e8f0; 
  border-radius: 16rpx; 
  margin-bottom: 16rpx; 
  background: #fff; 
  transition: all 0.3s ease;
}

.pack-item:active {
  border-color: #cbd5e1;
  transform: translateY(1rpx);
}

.pack-main { 
  display: flex; 
  align-items: center; 
  gap: 16rpx; 
  flex: 1;
  min-width: 0;
}

.pack-icon { 
  width: 60rpx; 
  height: 60rpx; 
  border-radius: 50%; 
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%); 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  font-size: 24rpx;
  flex-shrink: 0;
}

.pack-info { 
  display: flex; 
  flex-direction: column; 
  flex: 1;
  min-width: 0;
}

.pack-name { 
  font-size: 26rpx; 
  font-weight: 600; 
  color: #1e293b; 
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pack-meta { 
  font-size: 22rpx; 
  color: #64748b; 
}

/* 空状态 */
.empty { 
  text-align: center; 
  color: #94a3b8; 
  padding: 40rpx 20rpx; 
  font-size: 24rpx;
}
/* 模态框 */
.modal { 
  position: fixed; 
  left: 0; 
  right: 0; 
  top: 0; 
  bottom: 0; 
  background: rgba(0,0,0,0.6); 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  z-index: 1000; 
  padding: 20rpx;
}

.modal-body { 
  width: 100%; 
  max-width: 600rpx; 
  max-height: 80vh;
  background: #fff; 
  border-radius: 20rpx; 
  padding: 30rpx; 
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.3);
  overflow-y: auto;
}

.modal-title { 
  font-size: 30rpx; 
  font-weight: 700; 
  color: #1e293b; 
  margin-bottom: 20rpx; 
  text-align: center;
}

/* 表单输入 */
.input { 
  width: 100%; 
  padding: 18rpx 20rpx; 
  border: 2rpx solid #e2e8f0; 
  border-radius: 12rpx; 
  font-size: 26rpx; 
  color: #1e293b; 
  background: #fff; 
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #667eea;
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

.textarea { 
  width: 100%; 
  min-height: 120rpx; 
  padding: 16rpx 20rpx; 
  border: 2rpx solid #e2e8f0; 
  border-radius: 12rpx; 
  font-size: 26rpx; 
  background: #fff; 
  color: #1e293b; 
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.textarea:focus {
  border-color: #667eea;
  outline: none;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.1);
}

/* 模态框操作按钮 */
.modal-actions { 
  display: flex; 
  gap: 12rpx; 
  margin-top: 24rpx; 
  flex-wrap: wrap;
}

.modal-actions .btn-primary,
.modal-actions .btn-outline {
  flex: 1;
  min-width: 120rpx;
}
/* 上传器 */
.uploader { 
  margin-top: 16rpx; 
  height: 200rpx; 
  background: #f8fafc; 
  border: 2rpx dashed #cbd5e1; 
  border-radius: 16rpx; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  transition: all 0.3s ease;
}

.uploader:active {
  background: #f1f5f9;
  border-color: #94a3b8;
}

.uploader-hint { 
  color: #64748b; 
  font-size: 24rpx;
  text-align: center;
}

/* 图片 */
.img { 
  width: 100%; 
  height: 100%; 
  border-radius: 12rpx; 
  object-fit: cover;
}

/* 文件芯片 */
.file-chip { 
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%); 
  color: #3730a3; 
  padding: 12rpx 16rpx; 
  border-radius: 12rpx; 
  font-size: 24rpx;
  font-weight: 500;
}

/* 图片网格 */
.img-grid { 
  display: grid; 
  grid-template-columns: repeat(3, 1fr); 
  gap: 16rpx; 
  margin-top: 16rpx;
}

.img-cell { 
  position: relative; 
  height: 160rpx; 
  background: #f8fafc; 
  border: 2rpx solid #e2e8f0; 
  border-radius: 16rpx; 
  overflow: hidden; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  transition: all 0.3s ease;
}

.img-cell:active {
  border-color: #cbd5e1;
  transform: scale(0.98);
}

.img-cell.add { 
  color: #667eea; 
  font-size: 24rpx; 
  font-weight: 500;
}

.img-cell .btn-s { 
  position: absolute; 
  right: 8rpx; 
  bottom: 8rpx; 
}

/* 文件行 */
.file-row { 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
  padding: 16rpx 12rpx; 
  border-bottom: 1rpx solid #e2e8f0; 
  transition: all 0.3s ease;
}

.file-row:last-child { 
  border-bottom: none; 
}

.file-row:active {
  background: #f8fafc;
}

.file-name { 
  font-size: 24rpx; 
  color: #1e293b; 
  font-weight: 500;
  flex: 1;
  margin-right: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-actions { 
  display: flex; 
  gap: 8rpx; 
  flex-shrink: 0;
}

/* 音频文件项样式 */
.audio-file-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 16rpx 12rpx;
  border-bottom: 1rpx solid #e2e8f0;
  transition: all 0.3s ease;
}

.audio-file-item:last-child {
  border-bottom: none;
}

.audio-file-item:active {
  background: #f8fafc;
}

.audio-file-info {
  flex: 1;
  margin-right: 12rpx;
  min-width: 0;
}

.audio-file-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.audio-file-meta {
  display: flex;
  gap: 16rpx;
  margin-bottom: 6rpx;
}

.audio-duration {
  font-size: 22rpx;
  color: #64748b;
  background: #f1f5f9;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.audio-size {
  font-size: 22rpx;
  color: #64748b;
  background: #f1f5f9;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.audio-file-description {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.audio-file-actions {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex-shrink: 0;
}

.audio-file-actions .btn-s {
  min-width: 80rpx;
  padding: 8rpx 12rpx;
  font-size: 22rpx;
}

/* 图片上传样式 */
.form-group { margin-bottom: 24rpx; }
.form-label { display: block; font-size: 28rpx; font-weight: 600; color: #111827; margin-bottom: 12rpx; }
.images-upload-section { margin-top: 12rpx; }
.images-list { display: flex; flex-wrap: wrap; gap: 12rpx; margin-bottom: 12rpx; }
.image-item { position: relative; width: 120rpx; height: 120rpx; border-radius: 12rpx; overflow: hidden; }
.uploaded-image { width: 100%; height: 100%; border-radius: 12rpx; }
.remove-image { position: absolute; top: -8rpx; right: -8rpx; width: 32rpx; height: 32rpx; border-radius: 50%; background: #ef4444; color: white; font-size: 20rpx; display: flex; align-items: center; justify-content: center; border: 2rpx solid white; }
.add-image-btn { width: 120rpx; height: 120rpx; border: 2rpx dashed #d1d5db; border-radius: 12rpx; display: flex; flex-direction: column; align-items: center; justify-content: center; background: #f9fafb; color: #6b7280; }
.add-icon { font-size: 32rpx; margin-bottom: 8rpx; }
.add-text { font-size: 20rpx; }
.upload-hint { font-size: 22rpx; color: #9ca3af; margin-top: 8rpx; }

/* 视频上传样式 */
.video-upload-section { margin-top: 12rpx; }
.video-upload-area { height: 200rpx; border: 2rpx dashed #d1d5db; border-radius: 12rpx; display: flex; align-items: center; justify-content: center; background: #f9fafb; }
.upload-placeholder { text-align: center; color: #6b7280; }
.upload-icon { font-size: 48rpx; margin-bottom: 12rpx; }
.upload-text { font-size: 28rpx; font-weight: 500; margin-bottom: 8rpx; }
.video-preview { margin-top: 12rpx; }
.preview-video { width: 100%; height: 200rpx; border-radius: 12rpx; background: #000; }
.video-actions { display: flex; gap: 12rpx; margin-top: 12rpx; }
.video-actions .btn-small { flex: 1; height: 60rpx; border-radius: 8rpx; font-size: 24rpx; border: none; }
.btn-primary { background: #667eea; color: white; }
.video-info { margin-top: 12rpx; }
.video-title { font-size: 26rpx; font-weight: 600; color: #111827; margin-bottom: 4rpx; }
.video-duration { font-size: 22rpx; color: #6b7280; }
.btn-small { padding: 8rpx 16rpx; font-size: 22rpx; border-radius: 8rpx; margin-top: 8rpx; margin-right: 8rpx; }
.btn-danger { background: #ef4444; color: white; border: none; }

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .button-group {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .button-group .btn-outline,
  .button-group .btn-primary {
    width: 100%;
    min-width: auto;
  }
  
  .section-header {
    gap: 12rpx;
  }
  
  .pack-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .pack-main {
    width: 100%;
  }
  
  .modal-body {
    padding: 20rpx;
    margin: 20rpx;
  }
  
  .modal-actions {
    flex-direction: column;
  }
  
  .modal-actions .btn-primary,
  .modal-actions .btn-outline {
    width: 100%;
    min-width: auto;
  }
  
  .img-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12rpx;
  }
  
  .img-cell {
    height: 140rpx;
  }
}

