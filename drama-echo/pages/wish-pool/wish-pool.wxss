/* 许愿池页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #f093fb 100%);
  padding-bottom: 240rpx; /* 为固定按钮留出更多空间 */
}

/* 许愿池标题 */
.wish-pool-title {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0 40rpx;
  position: relative;
  width: 100%;
}

.title-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.title-text {
  font-size: 56rpx;
  font-weight: 800;
  color: #f5f5dc;
  text-shadow: 
    0 0 15rpx rgba(245, 245, 220, 0.6),
    0 0 25rpx rgba(255, 228, 196, 0.4),
    0 0 35rpx rgba(255, 218, 185, 0.3),
    0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 6rpx;
  background: linear-gradient(45deg, #f5f5dc, #ffe4b5, #f0e68c, #dda0dd);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-align: center;
  flex-shrink: 0;
}

.title-decoration {
  font-size: 32rpx;
  animation: sparkle 2s ease-in-out infinite;
  text-shadow: 
    0 0 12rpx rgba(255, 228, 196, 0.6),
    0 0 20rpx rgba(255, 218, 185, 0.4);
  flex-shrink: 0;
}

@keyframes sparkle {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.1); }
}



/* 许愿池内容 */
.wish-pool-content {
  padding: 40rpx 30rpx 30rpx;
}

/* 许愿气泡容器 */
.wish-bubbles {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  min-height: 60vh;
}

/* 许愿气泡 */
.wish-bubble {
  position: relative;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 8rpx 24rpx rgba(0, 0, 0, 0.15),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8),
    0 0 20rpx rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  cursor: pointer;
  animation: bubbleFloat 3s ease-in-out infinite;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
}

.wish-bubble:active {
  transform: scale(0.95);
}

/* 气泡大小等级 */
.wish-level-1 {
  width: 120rpx;
  height: 120rpx;
  animation-delay: 0s;
}

.wish-level-2 {
  width: 160rpx;
  height: 160rpx;
  animation-delay: 0.5s;
}

.wish-level-3 {
  width: 200rpx;
  height: 200rpx;
  animation-delay: 1s;
}

.wish-level-4 {
  width: 240rpx;
  height: 240rpx;
  animation-delay: 1.5s;
}

.wish-level-5 {
  width: 280rpx;
  height: 280rpx;
  animation-delay: 2s;
}

/* 气泡内容 */
.bubble-content {
  text-align: center;
  padding: 20rpx;
  word-break: break-all;
  line-height: 1.4;
}

/* 字体大小等级 */
.wish-level-1 .bubble-content {
  font-size: 24rpx;
  color: #999;
}

.wish-level-2 .bubble-content {
  font-size: 28rpx;
  color: #666;
}

.wish-level-3 .bubble-content {
  font-size: 32rpx;
  color: #333;
}

.wish-level-4 .bubble-content {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: 500;
}

.wish-level-5 .bubble-content {
  font-size: 40rpx;
  color: #ffd700;
  font-weight: 600;
}

/* 气泡浮动动画 */
@keyframes bubbleFloat {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 许愿弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 600rpx;
  max-width: 90vw;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.wish-input {
  width: 100%;
  min-height: 80rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  box-sizing: border-box;
  background: #fafafa;
}

/* 多行输入框样式 */
.input-group textarea.wish-input {
  min-height: 120rpx;
  max-height: 300rpx;
  resize: none;
  overflow-y: auto;
}

.wish-input:focus {
  border-color: #667eea;
  background: white;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea 0%, #f093fb 100%);
  color: white;
}

.confirm-btn.disabled {
  background: #e0e0e0;
  color: #999;
}

/* 加载状态 */
.loading, .no-more {
  text-align: center;
  padding: 40rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.8;
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.create-index-btn {
  background: linear-gradient(135deg, #667eea 0%, #f093fb 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.create-index-btn::after {
  border: none;
}

/* 许愿按钮 */
.wish-button-container {
  position: fixed;
  bottom: 50%;
  left: 50%;
  transform: translate(-50%, 50%);
  z-index: 100;
}

.wish-button {
  background: linear-gradient(135deg, #a8e6cf 0%, #88d8a3 50%, #7dd3fc 100%);
  border: 3rpx solid #ffffff;
  border-radius: 50rpx;
  padding: 0;
  box-shadow: 0 12rpx 32rpx rgba(168, 230, 207, 0.5), 0 0 0 2rpx rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
  width: 240rpx;
  height: 80rpx;
}

.wish-button::after {
  border: none;
}

.wish-button:active {
  transform: scale(0.95);
  box-shadow: 0 6rpx 16rpx rgba(168, 230, 207, 0.6), 0 0 0 2rpx rgba(255, 255, 255, 0.4);
}

.wish-button-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: white;
  gap: 12rpx;
}

.wish-button-icon {
  font-size: 32rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.wish-button-text {
  font-size: 28rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .wish-bubbles {
    gap: 30rpx;
  }
  
  .wish-level-1 { width: 100rpx; height: 100rpx; }
  .wish-level-2 { width: 130rpx; height: 130rpx; }
  .wish-level-3 { width: 160rpx; height: 160rpx; }
  .wish-level-4 { width: 190rpx; height: 190rpx; }
  .wish-level-5 { width: 220rpx; height: 220rpx; }
}
