/* 首页样式 - 根据设计稿重新设计 */

.container {
  min-height: 100vh;
  padding: 0;
  position: relative;
  overflow-x: hidden;
  background: transparent;
}

/* 顶部导航 */
.top-bar {
  padding: 40rpx 30rpx 0;
  background: transparent;
  position: relative;
  z-index: 10;
}

.nav-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.nav-title {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 48rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  letter-spacing: 0.02em;
}

.nav-actions {
  display: flex;
  gap: 20rpx;
}

.nav-icon {
  font-size: 32rpx;
  color: white;
  opacity: 0.8;
}

/* 用户信息卡片 */
.user-card {
  margin: 0 30rpx 30rpx;
  position: relative;
  z-index: 5;
}

.user-info {
  background: linear-gradient(90deg, rgba(241, 227, 255, 1) 0%, rgba(249, 243, 255, 1) 100%);
  backdrop-filter: blur(4rpx);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  border: 1px solid rgba(242, 233, 246, 0.56);
  box-shadow: 0 4rpx 24rpx rgba(187, 155, 228, 0.32);
  transition: all 0.3s ease;
}

.user-info:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.2);
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3px solid rgba(255, 255, 255, 0.5);
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF9A8B, #FFB5A3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  border: 3px solid rgba(255, 255, 255, 0.5);
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 32rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
  text-transform: uppercase;
}

.user-stats {
  display: block;
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 22rpx;
  font-weight: 400;
  color: #635E84;
}

.profile-btn {
  background: linear-gradient(180deg, rgba(220, 222, 255, 1) 0%, rgba(151, 158, 255, 1) 100%);
  color: #635E84;
  padding: 20rpx 32rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: 400;
  border: 1px solid rgba(196, 200, 255, 1);
  box-shadow: 0 11rpx 22rpx rgba(53, 62, 185, 0.09), inset 0 -2rpx 1rpx rgba(151, 158, 255, 0.4);
  backdrop-filter: blur(4rpx);
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
}

.login-btn {
  width: 100%;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 30rpx;
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

.login-btn::after {
  border: none;
}

/* 标语 */
.quote {
  text-align: center;
  margin: 0 30rpx 40rpx;
}

.quote-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
}

/* 主要功能卡片 */
.main-feature-card {
  margin: 0 30rpx 30rpx;
  background: rgba(255, 255, 255, 0.49);
  backdrop-filter: blur(4rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  border: 0.5px solid rgba(242, 233, 246, 1);
  box-shadow: 0 4rpx 12rpx rgba(187, 155, 228, 0.4);
  transition: all 0.3s ease;
  position: relative;
  z-index: 5;
}

.main-feature-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.2);
}

.feature-header {
  margin-bottom: 30rpx;
}

.feature-title {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  letter-spacing: 0.02em;
}

.title-decoration {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.feature-subtitle {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 26rpx;
  font-weight: 400;
  color: #666666;
}

.feature-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.actor-avatars {
  flex: 1;
}

.avatar-stack {
  position: relative;
  height: 80rpx;
}

.actor-avatar {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.5);
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.feature-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.gift-box-icon {
  width: 88rpx;
  height: 88rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
  animation: starGlow 2s ease-in-out infinite;
}

.stars {
  display: flex;
  gap: 8rpx;
}

.star {
  font-size: 24rpx;
  animation: twinkle 2s ease-in-out infinite;
}

.star:nth-child(2) {
  animation-delay: 0.5s;
}

.star:nth-child(3) {
  animation-delay: 1s;
}

@keyframes twinkle {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

/* 次要功能卡片 */
.secondary-features {
  display: flex;
  gap: 20rpx;
  margin: 0 30rpx 40rpx;
  position: relative;
  z-index: 5;
}

.secondary-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.49);
  backdrop-filter: blur(4rpx);
  border-radius: 24rpx;
  padding: 30rpx;
  border: 0.5px solid rgba(242, 233, 246, 1);
  box-shadow: 0 4rpx 12rpx rgba(187, 155, 228, 0.4);
  transition: all 0.3s ease;
}

.secondary-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.2);
}

.card-header {
  margin-bottom: 20rpx;
}

.card-title {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  letter-spacing: 0.02em;
}

.card-subtitle {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 22rpx;
  font-weight: 400;
  color: #666666;
}

.card-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.magic-hat-icon {
  width: 64rpx;
  height: 64rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
  animation: sparkle 3s ease-in-out infinite;
}

.magic-stars {
  display: flex;
  gap: 6rpx;
}

.magic-star {
  font-size: 20rpx;
  animation: sparkle 1.5s ease-in-out infinite;
}

.magic-star:nth-child(2) {
  animation-delay: 0.3s;
}

.magic-star:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes sparkle {
  0%, 100% { opacity: 0.5; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.3); }
}

.wish-star-icon {
  width: 72rpx;
  height: 72rpx;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.1));
  animation: wishGlow 2s ease-in-out infinite;
}

@keyframes wishGlow {
  0%, 100% { 
    filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3)) hue-rotate(0deg);
    transform: scale(1);
  }
  50% { 
    filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3)) hue-rotate(180deg);
    transform: scale(1.1);
  }
}

/* 调试工具 */
.debug-tools {
  margin: 40rpx 30rpx;
  text-align: center;
}

.debug-btn {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  color: white;
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 16rpx 32rpx;
  font-size: 24rpx;
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-weight: 400;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.debug-btn::after {
  border: none;
}

/* 底部标语 */
.footer-quote {
  text-align: center;
  margin: 40rpx 30rpx 60rpx;
}

.footer-text {
  font-family: 'PingFang SC', -apple-system, BlinkMacSystemFont, sans-serif;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  letter-spacing: 0.02em;
}

/* 响应式适配 */
@media screen and (max-width: 650rpx) {
  .secondary-features {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .feature-content {
    flex-direction: column;
    gap: 20rpx;
    align-items: flex-start;
  }
  
  .feature-icon {
    align-self: flex-end;
  }
  
  .nav-title {
    font-size: 40rpx;
  }
  
  .feature-title {
    font-size: 36rpx;
  }
  
  .card-title {
    font-size: 28rpx;
  }
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.8s ease-in;
}

@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(30rpx); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}