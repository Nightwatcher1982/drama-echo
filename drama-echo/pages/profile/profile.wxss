/* 个人中心样式 */
.container {
  padding: 30rpx 20rpx;
  min-height: 100vh;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #FF9A8B;
  text-align: center;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #8B7355;
  text-align: center;
  margin-bottom: 40rpx;
  font-style: italic;
}

/* 玻璃卡片效果 */
.glass-card {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  background-clip: border-box;
  border: 2rpx solid #fff;
  padding: 30rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
}

/* 用户信息区域 */
.header-section {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  background: linear-gradient(135deg, #FF9A8B 0%, #FF6B6B 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  font-size: 60rpx;
  color: white;
}

.user-info {
  flex: 1;
  min-width: 0;
  margin-right: 20rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 300rpx;
}

.user-title {
  font-size: 24rpx;
  color: #635E84;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 300rpx;
}

.edit-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8rpx 12rpx;
  background-color: #E0DBFC !important;
  border: 1rpx solid #A9ABFB;
  border-radius: 100rpx;
  background: transparent;
  min-width: auto;
  flex-shrink: 0;
  max-width: 140rpx;
}

/* 头像昵称官方采集面板 */
.editor-panel {
  margin-top: 24rpx;
  padding: 24rpx;
}

.editor-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-top: 16rpx;
}

.choose-avatar-btn {
  background: #f5f5f5;
  color: #333;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.nickname-input {
  flex: 1;
  background: #fff;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
}

.editor-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 16rpx;
}

.btn-icon {
  font-size: 24rpx;
  color: #635E84 !important;
}

.btn-text {
  font-size: 18rpx;
  color: #635E84 !important;
  margin-right: 4rpx;
  white-space: nowrap;
}

/* 收藏区块 */
.collection-section {
  padding: 30rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  background: -webkit-linear-gradient(10deg,#CE479B, #2E22AD);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.title-action {
  font-size: 26rpx;
  color: #FF9A8B;
  cursor: pointer;
}

.collection-single {
  display: flex;
  flex-direction: column;
}

.collection-item-large {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  padding: 30rpx 25rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.collection-item-large:active {
  transform: scale(0.98);
  opacity: 0.9;
  border-color: #FF9A8B;
}

.collection-icon-large {
  font-size: 60rpx;
  margin-right: 25rpx;
  background: linear-gradient(135deg, #FF9A8B 0%, #FF6B6B 100%);
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(255, 154, 139, 0.3);
}

.collection-content {
  flex: 1;
}

.collection-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.collection-desc {
  font-size: 24rpx;
  color: #666;
}

.collection-arrow {
  font-size: 32rpx;
  color: #FF9A8B;
  font-weight: bold;
}

/* 快捷入口 */
.quick-entries {
  padding: 30rpx;
}

.entry-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30rpx;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 40rpx;
  padding: 20rpx 10rpx;
  transition: all 0.3s ease;
}

.entry-item:active {
  transform: scale(0.9);
  opacity: 0.7;
}

.entry-icon {
  font-size: 0;
}

.icon-img{
  width: 100rpx;
  height: 100rpx;
}

.entry-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}


/* 设置选项 */
.settings-section {
  padding: 20rpx;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  margin: 12rpx 0;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  transition: background 0.3s ease;
}

.settings-item .red{
  color:#DD1536;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item:active {
  background: #f5f5f5;
}

.settings-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.settings-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.settings-arrow {
  font-size: 30rpx;
  color: #999;
}

.logout-item {
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
  padding-top: 30rpx;
}

.logout-item .settings-text {
  color: #ff4757;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0 60rpx;
}

.version-text {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.copyright {
  font-size: 24rpx;
  color: #bbb;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.empty-action {
  display: inline-block;
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #FF9A8B 0%, #FF6B6B 100%);
  color: white;
  border-radius: 30rpx;
  font-size: 28rpx;
}

/* 新用户引导层 */
.onboarding-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0,0,0,0.45);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.onboarding-card {
  width: 86%;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  text-align: center;
}

.onboarding-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.onboarding-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.onboarding-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 28rpx;
  justify-content: center;
}