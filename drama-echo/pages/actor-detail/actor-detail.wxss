  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.3) !important;
}

.share-button::after {
  border: none !important;
  content: none !important;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

