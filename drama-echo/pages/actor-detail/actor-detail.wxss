/* 演员详情页面样式 */

.container {
  min-height: 100vh;
  color: #333;
  padding-bottom: 160rpx;
  position: relative;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: fixed;
  top: -30%;
  right: -15%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  animation: float 7s ease-in-out infinite;
  z-index: -1;
}

.container::after {
  content: '';
  position: fixed;
  bottom: -20%;
  left: -10%;
  width: 250rpx;
  height: 250rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 50%;
  animation: float 9s ease-in-out infinite reverse;
  z-index: -1;
}

/* 加载状态 */
.loading-container {
  padding: 200rpx 0;
  text-align: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4facfe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20rpx;
}

.loading-text {
  color: white;
  font-size: 28rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 顶部导航 */
.header {
  background: transparent;
  color: white;
  padding: 40rpx 30rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 50%;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  position: relative;
  z-index: 1;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  position: relative;
  z-index: 1;
}

/* 演员卡片 */
.actor-card {
  background: white;
  margin: -20rpx 30rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 16rpx 60rpx rgba(0,0,0,0.12);
  overflow: hidden;
  position: relative;
}

.actor-info {
  display: flex;
  align-items: center;
  padding: 40rpx;
}

.actor-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: white;
  font-weight: bold;
  margin-right: 30rpx;
  position: relative;
}

.actor-avatar::after {
  content: '';
  position: absolute;
  inset: -6rpx;
  border-radius: 50%;
  background: transparent;
  z-index: -1;
  animation: none;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.actor-details {
  flex: 1;
}

.actor-name {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 10rpx;
  color: #2c2c2c;
}

.actor-title {
  display: block;
  color: #666;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.actor-desc {
  display: block;
  color: #666;
  font-size: 24rpx;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.voice-count {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  display: inline-block;
}

/* 竞争状态 */
.competition-status {
  background: linear-gradient(45deg, #ffeaa7, #fdcb6e);
  margin: 0 30rpx 40rpx;
  border-radius: 24rpx;
  padding: 24rpx;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.competition-status::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 20rpx,
    rgba(255,255,255,0.1) 20rpx,
    rgba(255,255,255,0.1) 40rpx
  );
  animation: move 3s linear infinite;
}

@keyframes move {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

.competition-text {
  position: relative;
  z-index: 1;
  font-size: 24rpx;
  font-weight: 500;
  color: #4facfe;
}

/* 排行榜区域 */
.ranking-section {
  width: 100%;
  margin: 40rpx auto;
  border-radius: 40rpx;
  padding: 24rpx;
  background: linear-gradient(90deg,#EFD0FA,#fff);
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.header-actions {
  display: flex;
  align-items: center;
  text-align: center;
  gap: 20rpx;
}

.refresh-btn, .loading-btn {
  font-size: 32rpx;
  padding: 8rpx;
  border-radius: 50%;
  background: rgba(255, 154, 139, 0.1);
  transition: all 0.3s ease;
}

.refresh-btn:active {
  background: rgba(255, 154, 139, 0.2);
  transform: scale(0.95);
}

.loading-btn {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  background: -webkit-linear-gradient(10deg,#CE479B, #2E22AD);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  display: flex;
  align-items: center;
}

.section-title::before {
  margin-right: 16rpx;
}

.view-all {
  width: 100%;
  color: #635E84;
  font-size: 24rpx;
  margin-top: 24rpx;
}

.ranking-list {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.08);
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
  transition: all 0.3s ease;
