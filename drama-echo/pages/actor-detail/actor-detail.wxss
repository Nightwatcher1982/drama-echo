  margin-bottom: 12rpx;
  backdrop-filter: blur(10rpx);
}

.ranking-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.ranking-item:active {
  background: #fafafa;
}

.rank-number {
