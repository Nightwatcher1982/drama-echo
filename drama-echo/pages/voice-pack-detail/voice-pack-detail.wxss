  align-items: center;
  justify-content: center;
}

.play-icon {
  color: white;
  font-size: 32rpx;
  margin-left: 4rpx;
}

.video-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: transparent;
  padding: 40rpx 30rpx 20rpx;
}

.video-title {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.video-duration {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 底部购买栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-info {
  flex: 1;
}

.current-price {
  display: flex;
  align-items: baseline;
  margin-bottom: 4rpx;
}

.price-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.price-amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #4facfe;
}

.save-info {
  font-size: 22rpx;
  color: #52c41a;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-secondary, .btn-primary {
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-secondary:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.btn-primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

.btn-primary:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.3);
}

.btn-secondary:disabled, .btn-primary:disabled {
  background: #ccc;
  color: #999;
  box-shadow: none;
  transform: none;
}

/* 购买确认弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
