/* 语音包详情页样式 */
.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
  position: relative;
  overflow-x: hidden;
}

.container::before {
  content: '';
  position: fixed;
  top: -25%;
  right: -12%;
  width: 280rpx;
  height: 280rpx;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite;
  z-index: -1;
}

.container::after {
  content: '';
  position: fixed;
  bottom: -15%;
  left: -8%;
  width: 220rpx;
  height: 220rpx;
  background: rgba(255, 255, 255, 0.04);
  border-radius: 50%;
  animation: float 10s ease-in-out infinite reverse;
  z-index: -1;
}

/* 顶部导航 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
}

.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
}

.nav-left, .nav-right {
  width: 80rpx;
  display: flex;
  justify-content: center;
}

.share-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.share-btn::after {
  border: none;
}

.back-icon, .share-icon {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 写真照片区域 */
.photo-section {
  position: relative;
}

.photo-swiper {
  height: 480px;
}

.photo-image {
  width: 100%;
  height: 100%;
  border-radius: 40rpx;
}

/* 图片数量指示器 */
.image-count-indicator {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  z-index: 10;
}

.count-text {
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
}

/* 演员信息卡片 */
.actor-card {
  position: absolute;
  bottom: -40rpx;
  left: 30rpx;
  right: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.actor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.actor-info {
  flex: 1;
}

.actor-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.actor-title {
  font-size: 24rpx;
  color: #666;
}

.pack-badge {
  background: transparent;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

/* 语音包信息 */
