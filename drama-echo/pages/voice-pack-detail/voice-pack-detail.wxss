  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.voice-list {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  overflow: hidden;
}

.voice-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  padding: 24rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s ease;
  backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.voice-item.playing {
  background: rgba(255, 255, 255, 0.15);
}

.voice-item:last-child {
  margin-bottom: 0;
}

.voice-content {
  flex: 1;
}

.voice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.voice-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}


.voice-subtitle {
  font-size: 22rpx;
  color: #999;
}

.voice-controls {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.voice-action {
  margin-left: 20rpx;
}

.play-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(79, 172, 254, 0.4);
  transition: all 0.3s ease;
  border: 2px solid rgba(255, 255, 255, 0.3);
  position: relative;
  overflow: hidden;
}

.play-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: all 0.3s ease;
}

.play-btn:active::before {
  width: 100%;
  height: 100%;
}

.play-btn.playing {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.play-btn:active {
  transform: scale(0.95);
}

.play-icon {
  font-size: 32rpx;
  color: white;
  margin-left: 2rpx;
}

.purchase-status {
  display: flex;
  align-items: center;
}

.buy-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
  transition: all 0.3s ease;
}

.buy-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.3);
}

.purchased-mark {
  display: flex;
  align-items: center;
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 2rpx solid rgba(82, 196, 26, 0.3);
}

.check-icon {
  margin-right: 8rpx;
}

/* 播放进度条 */
.progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.2);
}

.progress {
  height: 100%;
  background: transparent;
  transition: width 0.3s ease;
}

/* 打包购买区域 */
.package-section {
  padding: 40rpx 30rpx;
}

.package-card {
