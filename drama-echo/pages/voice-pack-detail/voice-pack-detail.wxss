/* 语音列表 */
.voice-list-section {
  padding: 30rpx 0;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

