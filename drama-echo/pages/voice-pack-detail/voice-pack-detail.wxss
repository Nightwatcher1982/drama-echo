}

.btn-cancel:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.btn-confirm {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(79, 172, 254, 0.3);
}

.btn-confirm:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(79, 172, 254, 0.3);
}

