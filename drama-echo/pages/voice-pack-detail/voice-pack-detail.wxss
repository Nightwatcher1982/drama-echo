  border-radius: 12rpx;
  font-size: 20rpx;
  margin-left: 16rpx;
}

.package-pricing {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.original-price {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-decoration: line-through;
}

.package-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #4facfe;
}

.save-amount {
  font-size: 24rpx;
  color: #52c41a;
  font-weight: 500;
}

/* 花絮视频区域 */
.bonus-section {
  padding: 20rpx 0;
}

.video-preview {
  position: relative;
  border-radius: 40rpx;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.1);
  font-size: 0;
}

.video-thumb {
  width: 100%;
