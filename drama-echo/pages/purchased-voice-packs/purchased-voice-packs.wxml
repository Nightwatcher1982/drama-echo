<view class="container">
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-container">
    <view class="loading-spinner"></view>
    <view class="loading-text">加载中...</view>
  </view>

  <!-- 空状态 -->
  <view wx:elif="{{empty}}" class="empty-container">
    <view class="empty-icon">🎵</view>
    <view class="empty-title">暂无购买的语音包</view>
    <view class="empty-desc">去戏剧回响页面购买你喜欢的语音包吧</view>
    <button class="empty-btn" bindtap="goToVoiceEcho">去购买</button>
  </view>

  <!-- 语音包列表 -->
  <view wx:else class="packs-container">
    <view class="packs-header">
      <view class="packs-title">我的语音包收藏</view>
      <view class="packs-count">共 {{purchasedPacks.length}} 个</view>
    </view>

    <view class="packs-list">
      <view 
        class="pack-item" 
        wx:for="{{purchasedPacks}}" 
        wx:key="packId"
        bindtap="goToPackDetail"
        data-pack-id="{{item.packId}}"
      >
        <view class="pack-cover">
          <image 
            class="pack-image" 
            src="{{item.packCover || '/images/actor-placeholder.jpg'}}" 
            mode="aspectFill"
          />
          <view class="pack-play-btn" catchtap="playPack" data-pack-id="{{item.packId}}">
            <text class="play-icon">▶️</text>
          </view>
        </view>
        
        <view class="pack-info">
          <view class="pack-name">{{item.packName}}</view>
          <view class="pack-actor">{{item.actorName}}</view>
          <view class="pack-desc">{{item.packDescription || '暂无描述'}}</view>
          <view class="pack-meta">
            <view class="pack-price">¥{{item.price}}</view>
            <view class="pack-date">{{item.purchaseDate}}</view>
          </view>
        </view>
        
        <view class="pack-arrow">></view>
      </view>
    </view>
  </view>
</view>
