.result-card {
  margin-top: 40rpx;
  position: relative;
  z-index: 2;
}

.result-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.result-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
}

.result-source {
  color: #5D4E75;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.theater-info {
  margin-top: 16rpx;
}

.theater-name {
  color: #8B4513;
  font-size: 24rpx;
  background: rgba(255, 154, 139, 0.15);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
}

/* 引言部分 */
.quote-section {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
  padding: 40rpx 20rpx;
}

.quote-mark {
  font-size: 80rpx;
  color: rgba(139, 69, 19, 0.3);
  position: absolute;
  font-family: serif;
}

.quote-mark {
  top: 0;
  left: 0;
}

.quote-end {
  bottom: 0;
  right: 0;
  transform: rotate(180deg);
}

.quote-chinese {
  color: #8B4513;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.6;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 2;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
}

.quote-english {
  color: #5D4E75;
  font-size: 32rpx;
  font-style: italic;
  line-height: 1.5;
  position: relative;
  z-index: 2;
  font-weight: 500;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.15);
}

/* 详情部分 */
.detail-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.detail-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.detail-label {
  color: #5D4E75;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.detail-content {
  color: #5D4E75;
  font-size: 30rpx;
  line-height: 1.6;
  font-weight: 500;
}

/* 魔都特色 */
.shanghai-section {
  margin-top: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.section-text {
  color: #5D4E75;
  font-size: 32rpx;
  font-weight: bold;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.shanghai-tip {
  color: #5D4E75;
  font-size: 28rpx;
  line-height: 1.6;
  font-weight: 500;
  background: rgba(255, 154, 139, 0.15);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #FF9A8B;
}

/* 推荐部分 */
.recommendations {
  margin-top: 32rpx;
}

.recommendation-list {
  margin-top: 24rpx;
}

.recommendation-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(255, 154, 139, 0.2);
}

.recommendation-item:last-child {
  border-bottom: none;
}

.rec-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
  margin-top: 4rpx;
}

.rec-content {
  flex: 1;
}

.rec-title {
  color: #8B4513;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.15);
}

.rec-desc {
  color: #5D4E75;
  font-size: 24rpx;
  line-height: 1.5;
  font-weight: 500;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.08);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  width: 100%;
}

.share-btn, .retry-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  padding: 24rpx 32rpx;
  width: 100%;
  box-sizing: border-box;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-weight: bold;
}

/* 背景装饰 */
.background-decor {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.decor-item {
  position: absolute;
  font-size: 120rpx;
  opacity: 0.05;
  animation: float 6s ease-in-out infinite;
}

.decor-1 {
  top: 20%;
  left: 10%;
  animation-delay: 0s;
}

.decor-2 {
  top: 60%;
  right: 15%;
  animation-delay: 2s;
}

.decor-3 {
  bottom: 30%;
  left: 20%;
  animation-delay: 4s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(10deg);
  }
}

/* 心情选择部分 */
.mood-section {
  margin-top: 40rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  justify-content: center;
  flex-wrap: wrap;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #5D4E75;
  margin-right: 8rpx;
}

.points-hint {
  font-size: 24rpx;
  color: #8B4513;
  background: rgba(255, 154, 139, 0.15);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.mood-categories {
  margin-bottom: 24rpx;
}

.category-selector {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.category-tab {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 2px solid rgba(255, 154, 139, 0.3);
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #5D4E75;
  transition: all 0.3s ease;
}

.category-tab.active {
  background: linear-gradient(135deg, #FF9A8B, #FFA07A);
  color: white;
  border-color: transparent;
}

.category-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.mood-options {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  padding: 0 20rpx;
}

.mood-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 2px solid rgba(255, 154, 139, 0.2);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  min-height: 100rpx;
}

.mood-option.selected {
  background: linear-gradient(135deg, #FF9A8B, #FFA07A);
  color: white;
  border-color: #FF9A8B;
  transform: scale(1.05);
}

.mood-emoji {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.mood-name {
  font-size: 22rpx;
  text-align: center;
  font-weight: 500;
}

.selected-mood-info {
  text-align: center;
  margin-top: 16rpx;
  padding: 16rpx;
  background: rgba(255, 154, 139, 0.15);
  border-radius: 16rpx;
}

.selected-text {
  font-size: 28rpx;
  color: #5D4E75;
  font-weight: bold;
}

.complete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  padding: 24rpx 32rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .quote-chinese {
    font-size: 36rpx;
  }
  
  .quote-english {
    font-size: 28rpx;
  }
  
  .result-icon {
    font-size: 80rpx;
  }
  
  .mood-options {
    grid-template-columns: repeat(3, 1fr);
  }
} 