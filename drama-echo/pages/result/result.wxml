<view class="container fade-in">
  <view class="page-title">{{pageTitle}}</view>
  
  <view class="result-card card">
    <view class="result-header">
      <view class="result-icon pulse">{{resultIcon}}</view>
      <view class="result-source">来自《{{resultData.play}}》的{{sourceText}}</view>
      <view class="theater-info" wx:if="{{resultData.theater}}">
        <view class="theater-name">推荐剧院：{{resultData.theater}}</view>
      </view>
    </view>
    
    <view class="quote-section">
      <view class="quote-mark">"</view>
      <view class="quote-chinese">{{resultData.chinese}}</view>
      <view class="quote-english">"{{resultData.english}}"</view>
      <view class="quote-mark quote-end">"</view>
    </view>
    
    <view class="divider"></view>
    
    <view class="detail-section">
      <view class="detail-title">
        <view class="detail-icon">{{detailIcon}}</view>
        <view class="detail-label">{{detailLabel}}</view>
      </view>
      <view class="detail-content">{{detailContent}}</view>
    </view>
    
    <!-- 魔都特色 -->
    <view class="shanghai-section" wx:if="{{shanghaiTip}}">
      <view class="divider"></view>
      <view class="section-title">
        <view class="section-icon">🏙️</view>
        <view class="section-text">魔都小贴士</view>
      </view>
      <view class="shanghai-tip">{{shanghaiTip}}</view>
    </view>
    
    <!-- 相关推荐 -->
    <view class="recommendations" wx:if="{{recommendations.length > 0 && !isSimplified}}">
      <view class="divider"></view>
      <view class="section-title">
        <view class="section-icon">✨</view>
        <view class="section-text">相关推荐</view>
      </view>
      <view class="recommendation-list">
        <view class="recommendation-item" wx:for="{{recommendations}}" wx:key="title">
          <view class="rec-icon">{{item.icon}}</view>
          <view class="rec-content">
            <view class="rec-title">{{item.title}}</view>
            <view class="rec-desc">{{item.description}}</view>
          </view>
        </view>
      </view>
    </view>
    
    <view class="action-buttons">
      <button class="btn-outline share-btn" open-type="share">
        <view class="btn-icon">📤</view>
        <view class="btn-text">分享</view>
      </button>
      <button wx:if="{{!isSimplified}}" class="btn-primary retry-btn" bindtap="goBack">
        <view class="btn-icon">🔄</view>
        <view class="btn-text">{{retryText}}</view>
      </button>
      <button wx:if="{{isSimplified}}" class="btn-outline complete-btn" bindtap="goBack">
        <view class="btn-icon">↩️</view>
        <view class="btn-text">返回</view>
      </button>
    </view>
  </view>
  
  <!-- 背景装饰 -->
  <view class="background-decor">
    <view class="decor-item decor-1">🎭</view>
    <view class="decor-item decor-2">🌟</view>
    <view class="decor-item decor-3">🎪</view>
  </view>
</view> 